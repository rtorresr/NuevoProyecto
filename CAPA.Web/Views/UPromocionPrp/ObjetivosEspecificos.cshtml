                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:12%; max-width:20%" class="center">Objetivos específicos</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Usuario registro</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Fecha de registro</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Usuario modificación</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Fecha de modificación</th>
                                                        <th colspan="2" width="10%" style="background-color:darkseagreen; color:black; min-width:10%; max-width:15%" class="center">Acciones</th>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Modificar</th>
                                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Eliminar</th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <tr>
                                                        <td class="center">01</td>
                                                        <td style="text-align:center"> - </td>
                                                        <td style="text-align:center"> Maquinaria </td>

                                                        <td style="text-align:center"> -- </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td class="center">
                                                            <a class="btn btn-warning" id="btnModificaObjEsp" href="#modificarModal" title="Modificar" data-toggle="modal">
                                                                <i class="ace-icon fa fa-edit"></i>
                                                            </a>
                                                        </td>
                                                        <td class="center">
                                                            <a> &nbsp;</a>
                                                            <a class="btn btn-danger" id="btnEliminarObjEsp" href="#eliminarModal" title="Eliminar" data-toggle="modal">
                                                                <i class="ace-icon fa fa-trash"></i>
                                                            </a>
                                                        </td>

                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>

                                    </div>

                                    <div class="col-xs-1 col-sm-1 col-md-1">
                                        <div> &nbsp;&nbsp; </div>
                                    </div>

                                </div>

                            </div>

                            <br />

                            <div class="col-xs-1 col-sm-1 col-md-1">
                                <div>&nbsp;</div>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>





    </div>


</div>

</div>

