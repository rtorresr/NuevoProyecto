            <div class="tab-content">

                <div class="active tab-pane" id="pesProrroga">

                    <div class="row">
                        <div class="col-xs-12 col-md-11" style="text-align: left; margin-left: 1%; border-bottom: 1px solid #ede9e9;">
                            <h3>
                                <i class="ace-icon fa fa-file"></i>
                                Registrar objetivo específico
                            </h3>
                        </div>
                    </div>

                    <br />
                    <div>
                        <div class="row" style="margin-bottom:10px;">

                            <div class="col-xs-1 col-sm-1 col-md-1">
                                <div>&nbsp;</div>
                            </div>


                            <div class="col-xs-10 col-sm-10 col-md-10 panel panel-default">

                                <div class="row" style="margin-bottom:10px">
                                    <br />

                                    <div class="col-xs-12 col-sm-12 col-md-6" style="text-align:left; margin-bottom:5px;">
                                        <div>
                                            <label> Objetivo específico:</label>
                                        </div>
                                        <div>
                                            @Html.TextBox("ObjetivoEspecifico", (string)"", new { @class = "campoTexto", @maxlength = "250", style = "width:80%" })
                                            @Html.TextBox("idObjetivoEspecifico", (string)"", new { @class = "campoTexto", @maxlength = "250", style = "width:50%; display:none" })
