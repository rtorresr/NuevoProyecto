                                        &nbsp;&nbsp;&nbsp;&nbsp;
                                    </div>

                                    <div class="col-xs-12 col-sm-6 col-md-2">
                                        &nbsp;&nbsp;&nbsp;&nbsp;
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-4">
                                    <div>&nbsp;&nbsp;</div>
                                </div>

                                <div class="col-xs-12 col-sm-6 col-md-4" style="text-align:center">
                                    <button id="btnNuevoObjetivoEspecifico" class="btn btn-info" style="margin-bottom:auto;">
                                        <i class="ace-icon fa fa-pencil-square"></i> AGREGAR
                                    </button>
                                </div>

                                <div class="col-xs-12 col-sm-6 col-md-4">
                                    <div>&nbsp;&nbsp;</div>
                                </div>
                            </div>

                            @*--- TABLA PLAZOS --*@

                            <div class="col-xs-12 col-md-12" style="align-content:center;">
                                <br />


                                <!-- inicio tabla-->

                                <div class="row">
                                    <div class="col-xs-1  col-sm-1  col-md-1">
                                        <div> &nbsp;&nbsp; </div>
                                    </div>

                                    <div class="col-xs-10 col-sm-10 col-md-10">
                                        <div class="col-xs-12 col-sm-12 col-md-12" style="text-align:left; margin-bottom: 1%; border-bottom: 1px solid #ede9e9;">
                                            <h3>
                                                Listado de Objetivos Específicos
                                            </h3>
                                        </div>

                                        <div class="table-responsive margen col-xs-12 col-sm-12 col-md-12" style="align-content:center;">
                                            <table id="tbRegistraObjEsp" class="table table-bordered table-hover" style="width:100%; align-content:center;">
                                                <thead>
                                                    <tr>
                                                        <th rowspan="2" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:2%; max-width:2%">ID</th>
