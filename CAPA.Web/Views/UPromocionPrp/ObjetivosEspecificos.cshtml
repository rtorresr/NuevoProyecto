        <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
        <!-- Fin Ruta -->
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="/Modulos/">Modulos</a>
            </li>
            <li><a href="/UPromocionPrp/Index">U.Promoción PRP</a></li>
            <li class="active">Registrar objetivo específico para actividad</li>
        </ul>

    </div><!-- Inicio ruta -->

    <div class="page-content">
        <!-- contenido -->

        <div class="page-header">
            <!-- Inicio titulo -->

            <div class="cbp-mc-column">

                <h1> Registrar objetivo específico para actividad </h1>
            </div>
        </div>

        <!-- Fin titulo -->
        <div class="col-md-12">
