
@{
    ViewBag.Title = "mantDocumentoFormatoOA";
    Layout = "~/Views/Shared/_LayoutMenuUpPrp.cshtml";
}

<title>Documento formato I-1/O-1 PRP</title>

<div class="main-content">
<!-- contenedor -->

<div class="main-content-inner">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
        <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
        <!-- Fin Ruta -->
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="/Modulos/">Modulos</a>
            </li>
            <li><a href="/UPromocionPrp/Index">U.Promoción PRP</a></li>
            <li class="active">Documento formato I-1/O-1 PRP</li>
        </ul>

    </div><!-- Inicio ruta -->

    <div class="page-content">
        <!-- contenido -->

        <div class="page-header">
            <!-- Inicio titulo -->

            <div class="cbp-mc-column">

                <h1> Documento formato I-1/O-1 PRP</h1>
            </div>
        </div>      
        
         <!-- Fin titulo -->

      <div class="col-md-12">
        <div class="nav-tabs-custom">

            <div class="tab-content">

                <div class="active tab-pane" id="pesProrroga">

                    <div class="row">
                        <div class="col-xs-12 col-md-11" style="text-align: left; margin-left: 1%; border-bottom: 1px solid #ede9e9;">
                            <h3>
                                <i class="ace-icon fa fa-file"></i>
                                Registrar documento formato I-1/O-1 PRP
                            </h3>
                        </div>
                    </div>

                    <br />
                    <div>
                        <div class="row" style="margin-bottom:10px;">

                            <div class="col-xs-1 col-sm-1 col-md-1">
                                <div>&nbsp;</div>
                            </div>


                            <div class="col-xs-10 col-sm-10 col-md-10 panel panel-default">

                                <div class="row" style="margin-bottom:0px">
                                    <br />

                                    <div class="col-xs-12 col-sm-12 col-md-4" style="text-align:left; margin-bottom:5px;">
                                        <div>
                                            <label> Línea de acción:</label>
                                        </div>
                                        <div>
                                            <select id="cbxTipoSDA" class="custom-select" style="width:65%;"> </select>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-4" style="text-align: left; margin-bottom: 10px;">
                                        <div>
                                            <label style="text-align: left;"> Unidad PCC: &nbsp;&nbsp; </label>
                                        </div>
                                        <div>
                                            <select id="cbxUnidadPCC" class="custom-select" style="width:65%;"> </select>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-4" style="text-align: left; margin-bottom: 10px;">
                                        <div>
                                            <label style="text-align: left;"> Requisito para: &nbsp;&nbsp; </label>
                                        </div>
                                        <div>
                                            <select id="cbxRequisito" class="custom-select" style="width:65%;"> </select>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-4" style="text-align: left; margin-bottom: 10px;">
                                        <div>
                                            <label style="text-align: left;"> Tipo de solicitante: &nbsp;&nbsp; </label>
                                        </div>
                                        <div>
                                            <select id="cbxTipoSolicitante" class="custom-select" style="width:65%;"> </select>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-8" style="text-align: left; margin-bottom: 10px;">
                                        <div>
                                            <label style="text-align: left;"> Descripción requisito: &nbsp;&nbsp; </label>
                                        </div>
                                        <div>
                                            @Html.TextBox("RequisitosDocOA", (string)"", new { @class = "campoTexto", @maxlength = "250", style = "width:80%" })
                                            @Html.TextBox("idRequisitosDocOA", (string)"", new { @class = "campoTexto", @maxlength = "250", style = "width:50%; display:none" })
                                            <p id="ARequisitosDocOA" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Ingresar solo texto en este campo.</p>
                                        </div>
                                    </div>

                                </div>

                                <div class="row" style="margin-bottom:10px; text-align:center">
                                   
                                    <div class="col-xs-12 col-sm-6 col-md-12" style="text-align:center; margin-top:25px">
                                        <button id="btnConsultarDocumentoFormato" class="btn btn-success" style="display:none; margin-bottom:25px;">
                                            <i class="ace-icon fa fa-search"></i> CONSULTAR
                                        </button>
                                        &nbsp;
                                        <button id="btnLimpiarDocumentoFormato" class="btn btn-info" style="display:none; margin-bottom:25px;">
                                            <i class="ace-icon fa fa-eraser"></i> LIMPIAR
                                        </button>

                                        <button id="btnGrabarDocumentoFormato" class="btn btn-warning" style="display:none; margin-bottom:25px;">
                                            <i class="ace-icon fa fa-floppy-o"></i> GUARDAR
                                        </button>
                                        &nbsp;
                                        <button id="btnCancelarDocumentoFormato" class="btn btn-danger" style="display:none; margin-bottom:25px;">
                                            <i class="ace-icon fa fa-undo"></i> CANCELAR
                                        </button>
                                    </div>

                                 </div>
                                </div>

                            </div>

                            <div class="row">
                                
                                <div class="col-xs-12 col-sm-6 col-md-12" style="text-align:center">
                                    <button id="btnNuevoDocumentoFormato" class="btn btn-info" style="margin-bottom:0px;">
                                        <i class="ace-icon fa fa-pencil-square"></i> AGREGAR
                                    </button>
                                </div>

                            </div>
                        
                            @*--- TABLA PLAZOS --*@

                            <div class="col-xs-12 col-md-12" style="align-content:center;">
                                

                                <!-- inicio tabla-->

                                <div class="row" style="margin-top:25px">
                                    <div class="col-xs-1  col-sm-1  col-md-1">
                                        <div> &nbsp;&nbsp; </div>
                                    </div>

                                    <div class="col-xs-10 col-sm-10 col-md-10">
                                        <div class="col-xs-12 col-sm-12 col-md-12" style="text-align:left; margin-bottom: 1%; margin-top:25px; border-bottom: 1px solid #ede9e9;">
                                            <h3>
                                                Listado de Documento Formato
                                            </h3>
                                        </div>

                                        <div class="table-responsive margen col-xs-12 col-sm-12 col-md-12" style="align-content:center;">
                                            <table id="tbDocumentoFormato" class="table table-bordered table-hover" style="width:100%;">
                                                <thead>
                                                    <tr>
                                                        <th rowspan="2" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:2%; max-width:2%">ID</th>
                                                        <th rowspan="2" width="2%" style="background-color:darkseagreen; color:black; min-width:3%; max-width:5%" class="center">N°</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:6%; max-width:12%" class="center">Línea de Acción</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Unidad PCC</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Requisito para:</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Tipo de solicitante</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:15%; max-width:25%" class="center">Descripción de requisito</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:7%; max-width:10%" class="center">Usuario registro</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:7%; max-width:10%" class="center">Fecha registro</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:7%; max-width:10%" class="center">Usuario modificación</th>
                                                        <th rowspan="2" width="15%" style="background-color:darkseagreen; color:black; min-width:7%; max-width:10%" class="center">Fecha modificación</th>
                                                        <th colspan="2" width="10%" style="background-color:darkseagreen; color:black; min-width:10%; max-width:15%" class="center">Acciones</th>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Modificar</th>
                                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Eliminar</th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <tr>
                                                        <td class="center">01</td>
                                                        <td style="text-align:center"> - </td>
                                                        <td style="text-align:center"> Maquinaria </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td style="text-align:center"> -- </td>
                                                        <td class="center">
                                                            <a class="btn btn-warning" id="btnModificaObjEsp" href="#modificarModal" title="Modificar" data-toggle="modal">
                                                                <i class="ace-icon fa fa-edit"></i>
                                                            </a>
                                                        </td>
                                                        <td class="center">
                                                            <a> &nbsp;</a>
                                                            <a class="btn btn-danger" id="btnEliminarObjEsp" href="#eliminarModal" title="Eliminar" data-toggle="modal">
                                                                <i class="ace-icon fa fa-trash"></i>
                                                            </a>
                                                        </td>

                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>

                                    </div>

                                    <div class="col-xs-1 col-sm-1 col-md-1">
                                        <div> &nbsp;&nbsp; </div>
                                    </div>

                                </div>

                            </div>

                            <br />

                            <div class="col-xs-1 col-sm-1 col-md-1">
                                <div>&nbsp;</div>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>


    </div>


</div>

<script type="text/javascript">

    $(document).ready(function() {

        controles_DocumentoFormatoOA();

    });


</script>