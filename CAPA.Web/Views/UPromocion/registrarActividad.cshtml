@{
    
    Layout = "~/Views/Shared/_LayoutMenuUp.cshtml";
}

<head>
    <title>Registrar Actividad</title>
</head>
 
<div class="main-content">
    <!-- contenedor -->

    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <!-- Fin Ruta -->
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="/Modulos/">Modulos</a>
                </li>
                <li><a href="/UPromocion/Index">U.Promoción</a></li>
                <li class="active">Registrar Actividad</li>
            </ul>

        </div><!-- Inicio ruta -->

        <div class="page-content">
            <!-- contenido -->

            <div class="page-header">
                <!-- Inicio titulo -->

                <div class="col-md-6" style="text-align:left">

                    <h1> Registrar Actividad</h1>
                </div>
            </div>       <!-- Fin titulo -->
            <!-- inicio pasos-->

            <div class="col-xs-12">
                <!-- contenido de pasos -->
                <div class="row" style="margin-bottom:25px;">
                    <br />
                    <a class="btn btn-success" id="" href="/UPromocion/Index" title="Registrar">
                        <i class="ace-icon fa fa-pencil"></i>REGISTRAR ACTIVIDAD
                    </a>

                    <a class="btn btn-success" id="" href="/UPromocion/Index" title="Cancelar">
                        <i class="ace-icon fa fa-undo"></i>CANCELAR
                    </a>

                </div>


                <div class="row">
                    <div class="col-xs-12" style="text-align: left; margin-bottom: 1%; border-bottom: 1px solid #ede9e9;">
                        <h3>
                            <i class="ace-icon fa fa-file"></i>
                            Datos del Especialista
                            
                        </h3>
                    </div>

                </div>

                <div class="row" style="margin-bottom:25px;">

                    <div class="col-md-4" style="text-align:left;"> 
                        <label style=" text-align:left;">  Unidad Regional : </label> 
                        @Html.TextBox("nro_orden", (string)"UNIDAD REGIONAL AREQUIPA", new { @class = "solo-numero", style = "width:60%", disabled = "true" }) 
                    </div>

                    <div class="col-md-4" style="text-align:left;">
                        <label style=" text-align:left;">  Nombre del Especialista : </label>
                        @Html.TextBox("razon_social", (string)"JORGE AUGUSTO, AMAYA CASTILLO", new { @MaxLength = "500", style = "width:60%", disabled = "true" })

                    </div>

                    <div class="col-md-4" style="text-align:left;"> 
                        <label style=" text-align:left;"> Cargo :  </label> 
                        @Html.TextBox("nro_orden", (string)"JEFE DEL PROGRAMA", new { @class = "solo-numero", style = "width:60%", disabled = "true" }) 
                    </div>
                </div>

                <br />


                <div id="accordion" style="border:1px solid;">
                    <div class="card">
                        <div class="card-header widget-header" id="headingOne" style="text-align:left;">
                            <h5 class="widget-title" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <a href="#" style="color:white; text-decoration:none;">
                                    <i class="ace-icon fa fa-file"></i>
                                    Datos de la Actividad a Programar
                                </a>
                            </h5>
                            <div class="widget-toolbar" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <a href="#" data-action="collapse" style="color:#fff;">
                                    <i class="ace-icon fa fa-chevron-down"></i>
                                </a>
                            </div>
                        </div>

                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body" style="padding-left:12px;">
                                <br />
                                <div class="row" style="margin-bottom:25px;">
                                    <div class="col-md-6" style="text-align:left; border-bottom:1px solid #ede9e9;">

                                        <label style=" text-align:left;">
                                            Aliados
                                        </label>
                                    </div>
                                </div>

                                <div class="row" style="margin-bottom:25px;">
                                    <div class="col-md-4" style="text-align:left;">

                                        <label style=" text-align:left;">
                                           ¿La actividad contará con aliados?
                                        </label>
                                        &nbsp;&nbsp; &nbsp;&nbsp;
                                        <a class="btn btn-success" id="agregarAliado" href="#" title="Agregar">
                                            <i class="ace-icon fa fa-file"></i>AGREGAR ALIADO
                                        </a>

                                    </div>
                                    <div class="col-md-4" style="text-align:left;" id="aliado" hidden="hidden">
                                       
                                                @{
                                                    List<KeyValuePair<int, string>> dropdownList = new List<KeyValuePair<int, string>>();
                                                    dropdownList.Add(new KeyValuePair<int, string>(1, "MUNICIPALIDAD DE LIMA"));
                                                    dropdownList.Add(new KeyValuePair<int, string>(2, "GOBIERNO REGIONAL "));
                                                    dropdownList.Add(new KeyValuePair<int, string>(3, "CAMARA DE COMERCIO"));
                                                    dropdownList.Add(new KeyValuePair<int, string>(4, "MINISTERIO DE AGRICULTURA"));
                                                    dropdownList.Add(new KeyValuePair<int, string>(5, "DIRECCION DE AGRICULTURA DE LIMA"));
                                                    dropdownList.Add(new KeyValuePair<int, string>(6, "MUNICIPALIDAD DE CAÑETE"));
                                                    SelectList selectList = new SelectList(dropdownList, "key", "value", 0);
                                                }

                                                @Html.DropDownList("selectAliado", selectList, new { @class = "selectpicker", title = "Seleccione un aliado ..." })
                                          
                                    </div>
                                    <div class="col-md-4" style="text-align:left;" id="aliado2" hidden="hidden">
                                        <a class="btn btn-danger" id="quitarAliado" href="#" title="Quitar">
                                            <i class="ace-icon fa fa-file"></i>QUITAR ALIADO
                                        </a>
                                    </div>
                                </div>

                                <div class="row" style="margin-bottom:25px;">
                                    <div class="col-md-6" style="text-align:left; border-bottom:1px solid #ede9e9;">

                                        <label style=" text-align:left;">
                                            Organización
                                        </label>
                                    </div>
                                </div>
                                <div class="row" style="margin-bottom:25px;">
                                    <div class="col-md-4" style="text-align:left;">

                                        <label style=" text-align:left;">
                                            ¿La actividad contará con una organización?
                                        </label>
                                        &nbsp;&nbsp; &nbsp;&nbsp;
                                        <a class="btn btn-success" id="agregarOrganizacion" href="#" title="Agregar">
                                            <i class="ace-icon fa fa-file"></i>AGREGAR ORGANIZACIÓN
                                        </a>

                                    </div>
                                    <div class="col-md-4" style="text-align:left;" id="organizacion" hidden="hidden">

                                        @{
                                            List<KeyValuePair<int, string>> dropdownList1 = new List<KeyValuePair<int, string>>();
                                            dropdownList1.Add(new KeyValuePair<int, string>(1, "MUNICIPALIDAD DE LIMA"));
                                            dropdownList1.Add(new KeyValuePair<int, string>(2, "GOBIERNO REGIONAL "));
                                            dropdownList1.Add(new KeyValuePair<int, string>(3, "CAMARA DE COMERCIO"));
                                            dropdownList1.Add(new KeyValuePair<int, string>(4, "MINISTERIO DE AGRICULTURA"));
                                            dropdownList1.Add(new KeyValuePair<int, string>(5, "DIRECCION DE AGRICULTURA DE LIMA"));
                                            dropdownList1.Add(new KeyValuePair<int, string>(6, "MUNICIPALIDAD DE CAÑETE"));
                                            SelectList selectList1 = new SelectList(dropdownList, "key", "value", 0);

                                        }

                                        @Html.DropDownList("selectOrganizacion", selectList1, new { @class = "selectpicker", title = "Seleccione una organización ..." })

                                    </div>
                                    <div class="col-md-4" style="text-align:left;" id="organizacion2" hidden="hidden">
                                        <a class="btn btn-danger" id="quitarOrganizacion" href="#" title="Quitar">
                                            <i class="ace-icon fa fa-file"></i>QUITAR ORGANIZACION
                                        </a>
                                    </div>
                                </div>

                                <div class="row" style="margin-bottom:25px;">
                                    <div class="col-md-6" style="text-align:left; border-bottom:1px solid #ede9e9;">

                                        <label style=" text-align:left;">
                                            Actividad
                                        </label>
                                    </div>
                                </div>
                                <div class="row" style="margin-bottom:25px;">
                                    <div class="col-md-2" style="text-align:left;">

                                        <label style=" text-align:left;">
                                            Actividad a programarse : 
                                        </label>
                                    </div>
                                    <div class="col-md-4" style="text-align:left;" id="organizacion" >

                                        @{
                                            List<KeyValuePair<int, string>> dropdownList2 = new List<KeyValuePair<int, string>>();
                                            dropdownList2.Add(new KeyValuePair<int, string>(1, "CAPACITACION"));
                                            dropdownList2.Add(new KeyValuePair<int, string>(2, "ASESORIA"));
                                            dropdownList2.Add(new KeyValuePair<int, string>(3, "MESA DE DIALOGO"));
                                            dropdownList2.Add(new KeyValuePair<int, string>(4, "MUNI-EJECUTIVO"));
                                            dropdownList2.Add(new KeyValuePair<int, string>(5, "VISITA DE CAMPO"));
                                            dropdownList2.Add(new KeyValuePair<int, string>(6, "ASESORAMIENTO PARA ELABORACION DE POA"));
                                            SelectList selectList2 = new SelectList(dropdownList2, "key", "value", 0);

                                        }

                                        @Html.DropDownList("selectActividad", selectList2, new { @class = "selectpicker", title = "Seleccione una actividad ..." })

                                    </div>

                                    
                                </div>

                                <div class="row" style="margin-bottom:25px;" >
                                    <div class="col-md-2" style="text-align:left;">
                                        <label style=" text-align:left;">
                                            Fecha de la Actividad a programarse :
                                        </label>
                                    </div>
                                    <div class="col-md-3" style="text-align:left;">
                                        <div class="txtFormulario" style="width:80% ">
                                            <div class='input-group date' id='datetimepicker2' style=" width:40%;">
                                                @Html.TextBox("nro_orden", (string)ViewBag.bus_num, new { style = "width:100%" })
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1" style="text-align:left;">
                                        <label style=" text-align:left;">
                                            Hora de Inicio :
                                        </label>
                                    </div>
                                    <div class="col-md-2" style="text-align:left;">
                                        <div class="txtFormulario" style="width:100% ">
                                            <div class='input-group date' id='horaInicio' style=" width:40%;">
                                                @Html.TextBox("nro_orden", (string)ViewBag.bus_num, new { style = "width:100%" })
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-time"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1" style="text-align:left;">
                                        <label style=" text-align:left;">
                                            Hora de Fin :
                                        </label>
                                    </div>
                                    <div class="col-md-2" style="text-align:left;">
                                        <div class="txtFormulario" style="width:100% ">
                                            <div class='input-group date' id='horaFin' style=" width:40%;">
                                                @Html.TextBox("nro_orden", (string)ViewBag.bus_num, new { style = "width:100%" })
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-time"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-bottom:25px;" >
                                    <div class="col-md-2" style="text-align:left;">
                                        <label style=" text-align:left;">
                                            Descripción de la Actividad :
                                        </label>
                                    </div>
                                    <div class="col-md-8" style="text-align:left;">
                                        @Html.TextArea("nro_orden", (string)"", new { @class = "solo-numero", @rows = "3", style = "width:90%; resize:none;" })
                                    </div>
                                </div>


                               
                            </div>
                        </div>
                    </div>


                </div>

               <!-- -->
            </div>
            <div class="row">
                <!-- inicio grid-->
                <!-- Fin tabla-->


            </div><!-- fin grid -->
        </div><!-- contenido -->
    </div>

</div><!-- fin contenedor -->

<script>
    
    $(document).ready(function () {
        // Enable Live Search.  
        $('#selectAliado').attr('data-live-search', true);
        $('#selectOrganizacion').attr('data-live-search', true);
        $('#selectActividad').attr('data-live-search', true);
        
        $('.selectpicker').selectpicker({
            width : '100%'
        });


      
    });

    $('#agregarAliado').click(function () {

        $('#aliado').show();
     
        $('#aliado2').show();
    });

    $('#quitarAliado').click(function () {

        $('#aliado').hide();
        $('#aliado2').hide();
    });
   
    $('#agregarOrganizacion').click(function () {

        $('#organizacion').show();
        $('#organizacion2').show();
    });

    $('#quitarOrganizacion').click(function () {

        $('#organizacion').hide();
        $('#organizacion2').hide();
    });

    $('#datetimepicker2').datetimepicker({
        locale: 'es',
        format: 'DD/MM/YYYY',
        maxDate: Date.now(),
        showClose: true,
        allowInputToggle: true,
        keepInvalid: true,
        ignoreReadonly: true,
        widgetPositioning: {
            horizontal: 'auto',
            vertical: 'top'
        }
    });

   
    $('#horaInicio').datetimepicker({
        format: 'LT'
    });
  


    $('#horaFin').datetimepicker({
        format: 'LT'
    });


</script>
