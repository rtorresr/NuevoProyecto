@model SEL_Entidades.SEL_E.OA_E

@{
    ViewBag.Title = "permisoActualizarFormatos";
    Layout = "~/Views/Shared/_LayoutMenuUp.cshtml";
}


<div class="main-content">
    <!-- contenedor -->

    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
            <!-- Fin Ruta -->
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="/Modulos/">Modulos</a>
                </li>
                <li><a href="/UPromocion/Index">U.Promoción</a></li>
                <li class="active">Permisos para actualizar formatos</li>
            </ul>

        </div><!-- Inicio ruta -->

        <div class="page-content">
            <!-- contenido -->

            <div class="page-header">
                <!-- Inicio titulo -->

                <div class="cbp-mc-column">

                    <h1> Permisos para actualizar formatos</h1>
                </div>
            </div>

            <!-- Fin titulo -->

            <div class="col-md-12">
                <div class="nav-tabs-custom">

                    <div class="tab-content">

                        <div class="active tab-pane" id="pesProrroga">

                            <div class="row">
                                <div class="col-xs-12 col-md-11" style="text-align: left; margin-left: 1%; border-bottom: 1px solid #ede9e9;">
                                    <h3>
                                        <i class="ace-icon fa fa-file"></i>
                                        <b>Permisos para actualizar formatos</b>
                                    </h3>
                                </div>
                            </div>

                            <br />
                            <div>
                                <div class="row" style="margin-bottom:5px;">

                                    <div class="col-xs-1 col-sm-1 col-md-1">
                                        <div>&nbsp;</div>
                                    </div>

                                    <div class="col-xs-10 col-sm-10 col-md-10 panel panel-default">

                                        <div class="row" style="margin-bottom:10px; margin-left:auto">
                                            <br />

                                            <div class="col-xs-12 col-sm-12 col-md-4" style="text-align:left; margin-bottom:5px; margin-left:auto">
                                                <div>
                                                    <label style="text-align:left">RUC:</label>
                                                </div>
                                                <div>
                                                  
                                                    @Html.TextBoxFor(m => m.idOA, new { @class = "campoNumero", style = "display:none" })
                                                    @Html.TextBoxFor(m => m.rucOA, new { @class = "campoNumero", @maxlength = "11", style = "width:45%" })
                                                    <button id="btnCargarOA" class="btn btn-info2 btn-sm" title="Buscar OA"> <ion-icon name="search"></ion-icon></button>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-md-4" style="text-align:left; margin-bottom: 10px; display:none;">

                                                <div>
                                                    @Html.TextBox("idActForm", (string)"", new { @class = "campoNumero", @MaxLength = "250", style = "width:80%", disabled = "disabled" })
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-sm-12 col-md-8" style="text-align:left; margin-bottom:5px; margin-left:auto">
                                                <div><label style="text-align:left"> Razón Social: </label></div>
                                                <div>
                                                    @Html.TextBox("razonSocialOA", (string)"", new { @class = "campoTexto", @MaxLength = "250", style = "width:85%", disabled = "disabled" })

                                                </div>
                                            </div>
                                        </div>

                                        <div class="row" style="margin-bottom:10px; margin-left:auto">

                                            <div class="col-xs-12 col-md-2" style="text-align: left; margin-bottom: 10px;">
                                                <div>
                                                    <div> <br /> </div>
                                                </div>

                                                <div>
                                                    <label style="text-align: left;"> Permitir actualizar: &nbsp;&nbsp; </label>

                                                    <label style="align-content:center"><input id="rb_checkList_Actualizar" type="checkbox" name="optradio" onchecked></label>
                                                </div>
                                            </div>
                                            
                                            <div class="col-xs-12 col-md-3" style="text-align: left; margin-bottom: 10px;">
                                                <div>
                                                    <label style="text-align: left;"> Fecha de Inicio: &nbsp;&nbsp; </label>
                                                </div>
                                                <div class="input-group" style="width:65%">
                                                    @Html.TextBox("fechaInicio", (string)"", new { @class = "col-xs-12 col-md-4 datetimepicker", @MaxLength = 10, style = "width:100%" })
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon glyphicon-calendar" style="text-align:left;"></span>
                                                    </span>
                                                </div>
                                            </div>
                                            
                                            <div class="col-xs-12 col-md-3" style="text-align:left; margin-bottom: 10px;">
                                                <div>
                                                    <label style="text-align: left;"> Plazo (días): &nbsp;&nbsp; </label>
                                                    <p id="APlazo" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Ingresar solo número en este campo.</p>
                                                </div>
                                                <div>
                                                    @Html.TextBox("plazo", (string)"", new { @class = "campoNumero", @MaxLength = "250", style = "width:80%" })
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-md-3" style="text-align: left; margin-bottom: 10px;">
                                                <div>
                                                    <label style="text-align: left;"> Fecha de termino: &nbsp;&nbsp; </label>
                                                </div>
                                                <div class="input-group" style="width:80%">
                                                    @Html.TextBox("fechaTermino", (string)"", new { @class = "col-xs-12 col-md-4 datetimepicker", @MaxLength = 10, style = "width:100%", disabled = true })
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon glyphicon-calendar" style="text-align:left;"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row" style="margin-bottom:10px; margin-left:auto">

                                            <div class="col-xs-12 col-sm-12 col-md-4" style="text-align: left; margin-bottom: 10px;">
                                                <div>
                                                    <label style="text-align:left;"> Motivo de actualización: &nbsp;&nbsp; </label>
                                                </div>
                                                <div>
                                                    @Html.TextBox("motivoActualizacion", (string)"", new { @class = "campoTexto", @maxlength = "250", style = "width:100%" })
                                                    <p id="ARequisitosDocOA" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Ingresar solo texto en este campo.</p>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-md-12" hidden="hidden" style="text-align:left; margin-bottom:5%;">
                                                <label style="text-align: left;">Usuario :</label>
                                                @Html.TextBox("idusuario", (string)"", new { @class = "campoNumero", @maxlength = "10", style = "width:25%", Value = @Session["IdUsua"] })
                                            </div>

                                            <div class="col-xs-12 col-sm-12 col-md-8" style="text-align:left; margin-bottom: 10px; margin-top:25px">
                                                
                                                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                <button id="btnConsultarPermisoFormato" class="btn btn-success" style="display:none; margin-bottom:25px;">
                                                    <i class="ace-icon fa fa-search"></i> CONSULTAR
                                                </button>
                                                &nbsp;
                                                <button id="btnGrabarPermisoFormato" class="btn btn-warning" style="display:none; margin-bottom:25px;">
                                                    <i class="ace-icon fa fa-floppy-o"></i> GUARDAR
                                                </button>
                                                &nbsp;
                                                <button id="btnLimpiarPermisoFormato" class="btn btn-info" style="display:none; margin-bottom:25px;">
                                                    <i class="ace-icon fa fa-eraser"></i> LIMPIAR
                                                </button>
                                                &nbsp;
                                                <button id="btnCancelarPermisoFormato" class="btn btn-danger" style="display:none; margin-bottom:25px;">
                                                    <i class="ace-icon fa fa-undo"></i> CANCELAR
                                                </button>
                                               
                                               
                                            </div>

                                            <div class="row">

                                                <div class="col-xs-12 col-sm-6 col-md-12" style="text-align:center">
                                                    <button id="btnAgregarPermisoFormato" class="btn btn-info" style="margin-bottom:0px;">
                                                        <i class="ace-icon fa fa-pencil-square"></i> AGREGAR
                                                    </button>
                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                </div>

                                @*--- TABLA PLAZOS --*@

                                <div class="col-xs-12 col-md-12" style="align-content:center;">

                                    <!-- inicio tabla-->

                                    <div class="row" style="margin-top:25px">
                                        <div class="col-xs-1  col-sm-1  col-md-1">
                                            <div> &nbsp;&nbsp; </div>
                                        </div>

                                        <div class="col-xs-10 col-sm-10 col-md-12">
                                            <div class="col-xs-12 col-sm-12 col-md-12" style="text-align:left; margin-bottom: 1%; margin-top:25px; border-bottom: 1px solid #ede9e9;">
                                                <h3>
                                                    <br /> <b>Listado de Organizaciones para autorizar permisos para formatos</b>
                                                </h3>
                                            </div>

                                            <div class="table-responsive margen col-xs-12 col-sm-12 col-md-12" style="align-content:center;">
                                                <table id="tbPermisosFormatos" class="table table-bordered table-hover" style="width:100%;">
                                                    <thead>
                                                        <tr>
                                                            <th rowspan="1" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:2%; max-width:2%">ID</th>
                                                            <th rowspan="1" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:2%; max-width:2%">IdOA</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:3%; max-width:5%" class="center">N°</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:18%; max-width:20%" class="center">RUC</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:25%; max-width:35%" class="center">Razón Social</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:3%; max-width:5%" class="center">Permitir actualizar</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Fecha inicio</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:7%; max-width:10%" class="center">Plazo(días)</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:6%; max-width:8%" class="center">Fecha de termino</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:20%; max-width:22%" class="center">Motivo actualización</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:15%; max-width:18%" class="center">Usuario registro</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:8%; max-width:10%" class="center">Fecha registro</th>
                                                            <th rowspan="1" style="background-color:darkseagreen; color:black; min-width:8%; max-width:12%" class="center">Estado de permiso</th>

                                                        </tr>

                                                    </thead>

                                                    @*<tbody>
                                                        <tr>
                                                            <td class="center">01</td>
                                                            <td style="text-align:center"> - </td>
                                                            <td style="text-align:center"> Maquinaria </td>
                                                            <td style="text-align:center"> -- </td>
                                                            <td style="text-align:center"> -- </td>
                                                            <td style="text-align:center"> -- </td>
                                                            <td style="text-align:center"> -- </td>
                                                            <td style="text-align:center"> -- </td>
                                                            <td style="text-align:center"> -- </td>
                                                            <td style="text-align:center"> -- </td>
                                                            <td style="text-align:center"> -- </td>
                                                            <td style="text-align:center"> --</td>

                                                        </tr>

                                                    </tbody>*@
                                                </table>
                                            </div>

                                        </div>

                                        <div class="col-xs-1 col-sm-1 col-md-1">
                                            <div> &nbsp;&nbsp; </div>
                                        </div>

                                    </div>

                                </div>

                                <!--FIN TABLA-->
                            

                                <br />

                                <div class="col-xs-1 col-sm-1 col-md-1">
                                    <div>&nbsp;</div>
                                </div>


                               


                            </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>


    </div>


    <script type="text/javascript">

    $(document).ready(function() {
       
        controlesActualizaFormatoOA();

    })


    </script>