@model SEL_Entidades.SEL_E.OA_JuntaDirectiva_E

@{
    ViewBag.Title = "registrarMiembroJD";
    Layout = "~/Views/Shared/_LayoutMenuUp.cshtml";
}

<head>
    <title>Registrar Miembro de Junta Directiva</title>
</head>


<div class="main-content">
    <!-- contenedor -->

    <div class="main-container ace-save-state" id="main-container">
        <div class="main-content-inner">
            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
                <!-- Fin Ruta -->
                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/UPromocion/"> </a>
                    </li>
                    <li><a href="/UPromocion/Index">U. Promocion</a></li> 
                    <li class="active"> <a href="registrarJuntaDirectiva">Registro Miembro Junta Directiva </a></li>
                </ul>

            </div><!-- Inicio ruta -->

            <div class="page-content">
                <!-- contenido -->

                <div class="page-header">
                    <!-- Inicio titulo -->

                    <div class="col-xs-12">
                        <h1> Registrar Miembro a la Junta Directiva de la Organización </h1>
                    </div>
                </div>       <!-- Fin titulo -->
                <!-- inicio pasos-->

                <div class="col-xs-12">
                    <!-- contenido de pasos -->
                    <div class="row" style="margin-bottom:25px;">
                        <br />
                        <button class="btn btn-success" id="btnGrabarmiembroJD" title="Registrar">
                            <i class="ace-icon fa fa-pencil"></i> REGISTRAR
                        </button>

                        <button class="btn btn-success" id="btnCancelarUP" title="Cancelar">
                            <i class="ace-icon fa fa-undo"></i> CANCELAR
                        </button>
                    </div>

                    <br />


                    <!--------- ACORDEON ------------>
                    <div id="accordion" style="border:1px solid;">
                        <div class="card">

                            <div class="card-header widget-header" id="headingOne" style="text-align:left;">
                                <h5 class="widget-title" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" style="color:white; text-decoration:none;">
                                        <i class="ace-icon fa fa-file"></i>
                                        Miembro Para la Junta Directiva
                                    </a>
                                </h5>
                                <div class="widget-toolbar" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" data-action="collapse" style="color:#fff;">
                                        <i class="ace-icon fa fa-chevron-down"></i>
                                    </a>
                                </div>
                            </div>


                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body" style="padding-left:12px;padding-right:12px;">
                                    <br />

                                    <div class="row" style="margin-bottom:5px;">

                                        <div class="col-xs-12 col-md-4" style="text-align:left;">
                                            <div>
                                                <label style="text-align:left;">¿Pertenece a la Organización?:</label>
                                            </div>
                                            <div>
                                                <select id="cbxPertencePN" class="custom-select">
                                                    <option value="0">Seleccione</option>
                                                    <option value="1">No pertenece a la organizacion.</option>
                                                    <option value="2">Pertenece a la organizacion.</option>
                                                </select>
                                            </div>
                                            @Html.TextBox("idUsuarioRegistro", (string)"", new { @class = "campoTelefono", @maxlength = "9", style = "display:none; width:40%", Value = @Session["IdUsua"] })
                                        </div>


                                        <div class="col-xs-12 col-md-4" style="text-align:left;">
                                            <div>
                                                <label style="text-align:left;"> DNI :  </label>
                                            </div>
                                            <div>
                                                @Html.TextBox("idUnidadPcc", (string)"", new { @class = "campoNumero", style = "display:none; width:45%",  value = 2 })
                                                @Html.TextBoxFor(m => m.idJuntaDirectiva, new { @class = "campoNumero", style = "display:none; width:45%", })
                                                @Html.TextBox("idMiembroJDirectiva", (string)"", new { @class = "campoNumero", style = "display:none; width:45%" })
                                                @Html.TextBox("idSocio", (string)"", new { @class = "campoNumero", style = "display:none; width:45%", })
                                                @Html.TextBox("idUsuar", (string)"", new { @class = "campoTexto", style = "display:none; width:45%", Value = Session["IdUsua"] })
                                                @Html.TextBoxFor(m=>m.rucOA, new { @class = "campoTexto", style = "display:none; width:4"})
                                                @Html.TextBox("idOADatos", (string)"", new { @class = "campoTexto", style = "display:none; width:45%" })
                                                @*@Html.TextBox("idOA", (string)"", new { @class = "campoTexto", style = "display:none; width:45%" })*@
                                                @Html.TextBoxFor(m=>m.idOA, new { @class = "campoNumero", style = "display:none; width:45%" })
                                                @Html.TextBox("tipoOrganizac", (string)"", new { @class = "", style = "display:none; width:45%", enabled = "true", })
                                                @Html.TextBox("dniMiembroJD", (string)"", new { @class = "campoNumero", @MaxLength = 8, style = "width:30%", enabled = "true" })

                                                <a class="btn btn-success" id="btnBuscarSocio" title="Validar"> <i class="ace-icon fa fa-check-circle"></i>Buscar</a>
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-md-4" style="text-align:left;">
                                            <div>
                                                <label style="text-align:left;"> Nombre de Miembro de Junta Directiva:  </label>
                                            </div>
                                            <div>
                                                @Html.TextBox("nombMiembroJD", (string)"", new { @class = "campoTexto", style = "width:68%", disabled = "true" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row" style="margin-bottom:5px;">

                                        <div class="col-xs-12 col-md-4" style="text-align:left;">
                                            <div>
                                                <label style="text-align: left;"> Teléfono :  </label>
                                            </div>
                                            <div>
                                                @Html.TextBox("telefonoMiembroJD", (string)"", new { @class = "campoTelefono", @maxlength = "9" })
                                                <p id="Atelefono" class="alerta" style="display:none; width:25%; font-family:'Gill Sans'; color:darkred">Solo digitos en este campo.</p>
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-md-4 " style="text-align:left;">
                                            <div>
                                                <label style="text-align:left;"> Correo Eléctronico :  </label>
                                            </div>
                                            <div>
                                                @Html.TextBox("correoElectronicoMiembroJD", (string)"", new { @class = "campoEmail   col-xs-12 col-sm-6 col-md-8" })
                                                <p id="AcorreoElectronicoMiembroJD" class="alerta col-xs-12 col-sm-6 col-md-10" style="display:none; font-family:'Gill Sans'; color:darkred">Debe ingresar un correo valido</p>
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-md-4" style="text-align: left;">
                                            <div>
                                                <label style="text-align:left;">Cargo :</label>
                                            </div>
                                            <div>

                                                <select id="cbxOACargoFr" style="width:65%"></select>
                                            </div>
                                        </div>

                                    </div>

                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function() {
        controles_MiembroJD();

    });
</script>
