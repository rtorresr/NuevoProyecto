@model SEL_Entidades.SEL_E.OA_Usuario_E

@{
    ViewBag.Title = "validarUsuarioOA";
    Layout = "~/Views/Shared/_LayoutMenuASist.cshtml";
}

<style>
    .progress {
      background: red;
      display: block;
      height: 20px;
      text-align: center;
      transition: width .3s;
      width: 0;
    }

    .progress.hide {
      opacity: 0;
      transition: opacity 1.3s;
    }
     
</style>


<head>
    <title>Validar datos del usuario de la Organización Agropecuaria (OA)</title>
</head>

 
<div class="main-content">
    <!-- contenedor -->

    <div class="main-content-inner">

        <div class="main-container ace-save-state" id="main-container">

            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
                <!-- Inicio Ruta -->

                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/Home/Modulos/">Modulos</a>
                    </li>
                    <li><a href="/UASistemas/Index">U. Sistemas</a></li>
                    <li class="active"> <a href="/UASistemas/validarUsuarioOA">Validar Usuarios OA</a></li>
                </ul>
            </div><!-- Fin ruta -->

            <div class="page-content">
                <!-- contenido -->

                <div class="page-header">
                    <!-- Inicio titulo -->
                    <div class="col-md-12">
                        @*<div class="cbp-mc-column">*@
                        <h1> VALIDAR DATOS DEL USUARIO DE LA ORGANIZACIÓN AGROPECUARIA (OA)  </h1>
                    </div>
                </div>                  
                <!-- Fin titulo -->
                    
                <br />
                <br />

                <!-- inicio pasos-->
                <div class="col-xs-12">
                    <!-- contenido de pasos -->
                    <div id="accordion" style="border:1px solid;">
                        <div class="card">

                            <div class="widget-header card-header" id="headingOne" style="text-align:left;">
                                <h5 class="widget-title" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" style="color:white; text-decoration:none;">
                                        <i class="ace-icon fa fa-file"></i>
                                        Criterios de Búsqueda
                                    </a>
                                </h5>
                                <div class="widget-toolbar" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" data-action="collapse" style="color:#fff;">
                                        <i class="ace-icon fa fa-chevron-down"></i>
                                    </a>
                                </div>
                            </div>


                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body" style="padding-left:12px;padding-right:12px;">
                                    <br />

                                    <div class="row" style="margin-bottom:10px;">

                                        <div class="col-xs-12 col-sm-12 col-md-4" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Nro Ruc :</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("NroDocumento", (string)"", new { @class= "campoNumero", style="width:45%"}) 
                                                <p id="ANroDocumento" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo digitos en este campo.</p> 
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-sm-12 col-md-4" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Raz. Social :</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("RazSocial", (string)"", new { @class = "campoNumero", style = "width:90%" })
                                                <p id="ARazSocial" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p> 
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-sm-12 col-md-4" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Email :</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("eMailRep", (string)"", new { @class = "campoEmail", style = "width:70%" })
                                                <p id="AeMailRep" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                            </div>
                                        </div>
                                         
                                    </div>

                                    <div class="row" style="margin-bottom:10px;">

                                        <div class="col-xs-12 col-sm-12 col-md-4" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align: left;"> Validos / De baja :  </label>
                                            </div>
                                            <div>
                                                @{
                                                    List<KeyValuePair<int, string>> dropdownList1 = new List<KeyValuePair<int, string>>();
                                                    dropdownList1.Add(new KeyValuePair<int, string>(0, "Seleccione"));
                                                    dropdownList1.Add(new KeyValuePair<int, string>(1, "Validos"));
                                                    dropdownList1.Add(new KeyValuePair<int, string>(2, "De baja")); 
                                                    SelectList selectList1 = new SelectList(dropdownList1, "key", "value", 0);
                                                }
                                                @Html.DropDownList("cbxValidoConObs", selectList1, new { @class = "campoTexto", @maxlength = "35", style = "width:50%;" })
                                            </div> 
                                        </div>
                                          

                                        <div class="col-xs-12 col-sm-12 col-md-4" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Fecha de Tramite:</label>
                                                @Html.CheckBox("chkFiltroFecha") 
                                            </div>
                                            <div class="form-inline">
                                                del &nbsp;
                                                <div class="input-group date" style="width:40%; Text-align:left;">
                                                    @Html.TextBox("fechaIni", (string)"", new { @class = "datetimepicker", style = "width:100%; text-align:left;", disabled = true })
                                                    <span class="input-group-addon" style="text-align:left; width:5%;">
                                                        <span class="glyphicon glyphicon-calendar"></span>
                                                    </span>
                                                </div>
                                                &nbsp; hasta &nbsp;
                                                <div class="input-group date" style="width:40%; Text-align:left;">
                                                    @Html.TextBox("fechaFin", (string)"", new { @class = "datetimepicker", style = "width:100%; text-align:left;", disabled = true})
                                                    <span class="input-group-addon" style="text-align:left; width:5%;">
                                                        <span class="glyphicon glyphicon-calendar"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div> 
                                         

                                    </div>



                                    <div class="row">
                                        <div class="cbp-mc-column">  
                                        </div>

                                        <div class="cbp-mc-column"> 
                                        </div>

                                        <div class="cbp-mc-column"> 
                                        </div>

                                        <!-- columna  3 -->

                                        <div class="cbp-mc-column ">
                                            <br>
                                            <button id="btnConsultarUsuarioOA" class="btn btn-success" style="margin-bottom:25px"><i class="ace-icon fa fa-search"></i>Consultar</button>
                                            <button id="btnLimpiarFiltroUsuarioOA" class="btn btn-success" style="margin-bottom:25px"><i class="ace-icon fa fa-eraser"></i>Limpiar</button>

                                        </div>
                                    </div>


                                </div><!-- fin contenido-->
                            </div>
                        </div>
                    </div>
                     

                    <div class="col-xs-12 col-md-12">
 
                        <div id="div-tabla" class="table-responsive margen"> 
                            <table id="tablaValUsuarOA" class="table table-bordered table-hover table-striped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th rowspan="2" style="display:none;  color:black; text-align:center; vertical-align:middle; width:5%;">Id</th> 
										<th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Nro.</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">RUC </th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Raz. Social</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Dni. R. Legal</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Representante L.</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Email</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Estado</th> 
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Observación</th>
                                        @*<th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Activo</th>*@
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Registro</th> 
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Validación</th>
                                        <th colspan="4" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Acción</th>
                                    </tr> 
                                    <tr>
                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Validar</th>
                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Eliminar</th>
                                    </tr>
                                </thead>  
                                <tbody id="tbodyVU" class="tbodyVU"></tbody>  
                            </table>  
                        </div>
                    </div>

                    <br />

                    <div  class="row">
                        <div id="contentVU" class="col-lg-12">
                            <img src="~/Content/images/loader.gif" /><br />Un momento, por favor...
                        </div>
                    </div>


                    <div class="modal" id="validarUsuarioOA" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"  style="overflow-y: auto;">
                        <div class="modal-dialog" style="margin-left:20%;">
                            <div class="modal-content" style="width:165%;">
                                <div class="modal-header alert-success alert-dismissible">
                                    <button id="btnClose" type="button" class="close" data-dismiss="modal"></button>
                                    <h4 class="modal-title" id="myModalLabel"> Validar Usuario OA </h4>
                                </div>
                                <div class="modal-body" style="max-height:100%;">
                                    <form>
                                        @using (Html.BeginForm())
                                        {  
                                            <div class="row" style="margin-bottom:10px;">
                                                <div id="idUsuarOA" class="col-xs-12 col-md-12" style="text-align:left; display:none;">
                                                    <label style="text-align: left;">ID :</label>
                                                    @Html.TextBoxFor(model => model.idUsuarioOA, new { @class = "campoNumero", @maxlength = "100", style = "width:31%", disabled = "disabled" })
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;"> 
                                                <div class="col-xs-12 col-md-12" style="text-align:left;">
                                                    <div class="col-xs-12 col-md-3">
                                                        <label style="text-align: left; width:100%;">Nro. RUC :</label>
                                                    </div>
                                                    <div class="col-xs-12 col-md-9">
                                                        @Html.TextBoxFor(Model => Model.rucOA, new { @class = "campoNumero  ", @maxlenght = "8", style = "width:35%;", disabled = "disabled" })
                                                        <button id="btnConsultaPideSunat" type="button" class="btn btn-success"> Validar </button>
                                                        <p id="ArucOA" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo digitos en este campo.</p>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-12" style="text-align:left;">

                                                    <div class="col-xs-12 col-md-3">
                                                        <label style="text-align: left; width:100%;">Tipo Organización : </label>
                                                    </div>
                                                    <div class="col-xs-12 col-md-9">
                                                        <select id="cbxTipoOrgFr" class="custom-select" style="width:47%;" Value="Seleccione" disabled="disabled"> </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-12" style="text-align:left;">
                                                    <div class="col-xs-12 col-md-3">
                                                        <label style="text-align: left; width:100%;">Razón Social : </label>
                                                    </div>
                                                    <div class="col-xs-12 col-md-9">
                                                        @Html.TextBoxFor(model => model.razonSocial, new { @class = "campoTexto razSolVal", style = "width:47%", disabled = "disabled" })
                                                        &nbsp;&nbsp;
                                                        @Html.TextBox("razSocialPide", (string)"", new { @class = "campoTexto", style = "width:47%", disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-12" style="text-align:left;">
                                                    <div class="col-xs-12 col-md-3">
                                                        <label style="text-align: left;  width:100%;">DNI. Rep. Legal : </label>
                                                    </div>
                                                    <div class="col-xs-12 col-md-9">
                                                        @Html.TextBoxFor(model => model.nDniRepresentanteLegal, new { @class = "campoTexto", style = "width:47%", disabled = "disabled" })
                                                        &nbsp;&nbsp;
                                                        @Html.TextBox("nDniRepLegal", (string)"", new { @class = "campoTexto", style = "width:47%", disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-12" style="text-align:left;">
                                                    <div class="col-xs-12 col-md-3">
                                                        <label style="text-align: left; width:100%;">Representante L.: </label>
                                                    </div>
                                                    <div class="col-xs-12 col-md-9">
                                                        @Html.TextBoxFor(model => model.representanteLegal, new { @class = "campoTexto", style = "width:47%", disabled = "disabled" })
                                                        &nbsp;&nbsp;
                                                        @Html.TextBox("repLegalPide", (string)"", new { @class = "campoTexto", style = "width:47%", disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>
                                            


                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-12" style="text-align:left;">
                                                    <div class="col-xs-12 col-md-3">
                                                        &nbsp;&nbsp;  &nbsp;&nbsp; &nbsp;&nbsp;  &nbsp;&nbsp;
                                                    </div> 
                                                    <div class="col-xs-12 col-md-9 inline-block">
                                                        <label style="text-align:left; width:17%;"> Estado Activo : </label>
                                                        @Html.TextBox("esActivoV", (string)"", new { @class = "campoTexto", style = "width:20%", disabled = "disabled" })
                                                        &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp; 
                                                        <label style="text-align: left; width:17%;"> Estado Habido : </label> 
                                                        @Html.TextBox("esHabidoV", (string)"", new { @class = "campoTexto", style = "width:20%", disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>




                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-12" style="text-align:left;">
                                                    <div class="col-xs-12 col-md-3">
                                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    </div> 
                                                    <div class="col-xs-12 col-md-9 inline-block" style="text-align:left"> 
                                                        @Html.CheckBoxFor(model => model.valido)
                                                        <label style="width:18%;">Valido </label>
                                                        &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
                                                        @Html.CheckBoxFor(model => model.conObservacion)
                                                        <label style="width:18%;">Con observacion </label>
                                                    </div>
                                                </div>
                                            </div>


                                            @*<div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-12" style="text-align:left;">
                                                    <div class="col-xs-12 col-md-6">
                                                        <div></div>
                                                        <label style="text-align: left; width:45%;">Valido : </label>
                                                        @Html.CheckBoxFor(model => model.valido, new { @class = "campoTexto", style = "width:45%" })
                                                    </div>

                                                    <div class="col-xs-12 col-md-6">
                                                        <label style="text-align: left; width:45%;">Con observacion : </label>
                                                        @Html.CheckBoxFor(model => model.conObservacion, new { @class = "campoTexto", style = "width:45%" })
                                                    </div>
                                                </div>
                                            </div>*@

                                            <div class="row" style="margin-bottom:5px;">
                                                <div id="observ" class="col-xs-12 col-md-12" style="text-align:left; display:none">
                                                    <hr noshade="noshade" />
                                                    <div class="col-xs-12 col-md-3">
                                                        <label>Observación : </label>
                                                    </div>
                                                    <div>
                                                        @Html.TextAreaFor(model => model.observacion, new {@class = "campoTexto", style = "width:90%; heigth: 40%;", @placeholder = "Ingrese su Observacion..." })
                                                    </div>
                                                    <hr noshade="noshade" />
                                                </div>

                                                <div class="col-xs-12 col-md-12" hidden="hidden" style="text-align:left; margin-bottom:5%;">
                                                    <label style="text-align: left;">Responsable :</label>
                                                    @Html.TextBox("idUsuarioModificacion", (string)"", new { @class = "campoNumero", style = "width:25%;", Value = @Session["IdUsua"] })
                                                </div>
                                            </div>

                                        }
                                    </form> 
                                    <div class="modal-footer">
                                        <button id="btnSalvarValUsuarOA" type="button" class="btn btn-primary"> Guardar</button> 
                                        <button id="btnCerrarFormulario" type="button" class="btn btn-danger" data-dismiss="modal">Cerrar </button>
                                    </div>
                                </div> 
                            </div>
                        </div>


                    </div> 
                </div>
            </div>
        </div>
    </div>
     
</div>


<script type="text/javascript">

    $(document).ready(function () {
        llenarCboxTipoOrganizacion();
        listar_ValidarUsuariosOA();
        controles_ValidarUsuarioOA();
        limpiarFiltro(); 
    });

</script>

