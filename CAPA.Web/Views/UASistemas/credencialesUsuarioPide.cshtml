                                        {

                                            <div class="row" style="margin-bottom:10px;">
                                                <div id="idUsuPide" class="col-xs-12 col-md-6" style="text-align:left; display:none;">
                                                    <label style="text-align: left; margin-bottom:5%; width:30%;">ID :</label>
                                                    @Html.TextBoxFor(model => model.idUsuarioPide, new { @class = "campoNumero", @maxlength = "100", style = "width:31%", disabled = true })
                                                </div>

                                                <div   class="col-xs-12 col-md-6" style="text-align:left; display:none;">
                                                    <label style="text-align: left;">ID :</label>
                                                    @Html.HiddenFor(model => model.idUsuarioOA, new { @class = "campoNumero", @maxlength = "100", style = "width:31%", disabled = true })
                                                </div>

                                            </div>

                                            <div class="row" style="margin-bottom:10px;">
