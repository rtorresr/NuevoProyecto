                                                    <p id="ArazonSocial" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                </div>
                                            </div>

                                            
                                            <div class="row" style="margin-bottom:10px;">
                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left; margin-bottom:5%; width:30%;">Rep. Legal :</label>
                                                    @Html.TextBox("repLegal", (string)"", new { @class = "campoTexto ", @maxlenght = "250", style = "width:65%;", disabled = true }) 
                                                    <p id="ArazonSocial" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                </div>
       
                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left; margin-bottom:5%; width:30%;">DNI R. Legal:</label>
                                                    @Html.TextBox("dniRepLeagl", (string)"", new { @class = "campoTexto ", @maxlenght = "250", style = "width:45%;", disabled = true })
                                                    <p id="ArazonSocial" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                </div>
                                            </div> 

                                            <div class="row" style="margin-bottom:10px;">
                                                <div class="col-xs-12 col-md-6 form-inline" style="text-align:left;">
                                                    <label style="text-align: left; margin-bottom:5%; width:30%;">Email :</label>
                                                    @Html.TextBox("emailOA", (string)"", new { @class = "campoTexto ", @maxlenght = "250", style = "width:65%;", disabled = true })
                                                    <p id="ArazonSocial" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                </div>

                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left; margin-bottom:5%; width:30%;">Valido :</label>
                                                    @Html.TextBox("valido", (string)"", new { @class = "campoTexto", style = "width:45%", disabled = true })
                                                </div> 
                                            </div>

