                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:10px;">
                                                <div class="col-xs-12 col-md-6 form-inline" style="text-align:left;">
                                                    <label style="text-align: left; margin-bottom:5%; width:30%;">Fecha de Baja :</label>
                                                    <div class="input-group date" style="width:55%; Text-align:left;">
                                                        @Html.TextBoxFor(model => model.fechaBajaPide, new { @class = "datetimepicker", style = "width:100%; text-align:left;", disabled = true })
