@model SEL_Entidades.Seguridad_E.Usuario_E

@{
    ViewBag.Title = "UsuarioOA";
    Layout = "~/Views/Shared/_LayoutMenuASist.cshtml";
}

<head>
    <title>Usuarios OA</title>
</head>


<div class="main-content">
    <!-- contenedor -->

    <div class="main-content-inner">

        <div class="main-container ace-save-state" id="main-container">

            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
                <!-- Inicio Ruta -->

                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/Home/Modulos/">Modulos</a>
                    </li>
                    <li><a href="/UASistemas/Index">U. Sistemas</a></li>
                    <li class="active"> <a href="/UASistemas/UsuarioOA">Usuarios OA</a></li>
                </ul>
            </div><!-- Fin ruta -->

            <div class="page-content">
                <!-- contenido -->

                <div class="page-header">
                    <!-- Inicio titulo -->
                    <div class="col-md-12">
                        <h1> USUARIOS OA </h1>
                    </div>
                </div>                  <!-- Fin titulo -->
                <!-- inicio pasos-->
                <div class="col-xs-12">
                    <!-- contenido de pasos -->
                    <div id="accordion" style="border:1px solid;">
                        <div class="card">

                            <div class="widget-header card-header" id="headingOne" style="text-align:left;">
                                <h5 class="widget-title" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" style="color:white; text-decoration:none;">
                                        <i class="ace-icon fa fa-file"></i>
                                        Criterios de Búsqueda
                                    </a>
                                </h5>
                                <div class="widget-toolbar" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" data-action="collapse" style="color:#fff;">
                                        <i class="ace-icon fa fa-chevron-down"></i>
                                    </a>
                                </div>
                            </div>


                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body" style="padding-left:12px;padding-right:12px;">
                                    <br />

                                    <div class="row" style="margin-bottom:10px;">


                                        <div class="col-xs-12 col-sm-6 col-md-3" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Ruc:</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("rucOA", (string)"", new { @class = "campoTexto col-xs-12 col-sm-6 col-md-6" })
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-md-3" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Usuario:</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("nombUsuario", (string)"", new { @class = "campoTexto col-xs-12 col-sm-6 col-md-12"})
                                            </div>
                                        </div>

                                        <div class="col-xs-12  col-md-3" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Razón Social:</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("razonSocial", (string)"", new { @class = "campoTexto col-xs-12 col-sm-6 col-md-12" })
                                            </div>
                                        </div>
                                         

                                        <div class="col-xs-12 col-md-3" style="text-align:center; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">&nbsp;</label>
                                            </div>
                                            <div>
                                                <button id="btnConsultarUsuarioOA" class="btn btn-success" style="margin-bottom:25px"><i class="ace-icon fa fa-search"></i>Consultar</button>
                                                <button id="btnLimpiarFiltroUsuarioOA" class="btn btn-success" style="margin-bottom:25px"><i class="ace-icon fa fa-eraser"></i>Limpiar</button>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="cbp-mc-column">
                                        </div>

                                        <div class="cbp-mc-column">
                                        </div>

                                        <div class="cbp-mc-column">
                                        </div>

                                        <!-- columna  3 -->

                                    </div>


                                </div><!-- fin contenido-->
                            </div>
                        </div>
                    </div>


                    <div class="col-xs-12 col-md-12">
                         
                        <div class="col-xs-12 col-sm-12 col-md-12" style="text-align:left; margin-bottom: 1%; border-bottom: 1px solid #ede9e9;">
                            <h3>
                                Lista de Usuario OA
                            </h3>
                        </div>

                        <div id="div-tabla" class="table-responsive margen">

                            <table id="tablaUsuarioOA" class="table table-bordered table-hover table-striped" style="width:100%">

                                <thead>
                                    <tr>
                                        <th rowspan="2" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle;">Id</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Nro.</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Ruc </th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Razón Social </th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Representante Legal </th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Usuario</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Correo</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Tipo Usuario</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Activo</th> 
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Registro</th> 
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Modificación</th>
                                        <th colspan="3" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Acción</th>
                                    </tr>

                                    <tr>
                                         <th class="text-center" style="background-color:darkseagreen; color:black; min-width:2%; max-width:2%">Modificar</th>
                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:2%; max-width:2%">Eliminar</th>
                                    </tr>
                                </thead>

                                <tbody id="tbodyAM" class="tbodyAM"></tbody>

                            </table>

                        </div>
                    </div>


                    <div class="modal" id="frmUsuario" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="overflow-y: auto; display: none;">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header alert-success alert-dismissible">
                                    <h4 class="modal-title" id="myModalLabel"> Usuario OA </h4>
                                </div>

                                <div class="modal-body" style="max-height:120%">
                                    <form>
                                        @using (Html.BeginForm())
                                        {
                                            <div class="row">
                                                <div class="col-xs-12 col-md-11" style="text-align: left; margin-bottom: 1%; border-bottom: 1px solid #ede9e9;">
                                                    <h3>
                                                        <i class="ace-icon fa fa-file"></i>
                                                        Datos de Usuario PCC
                                                    </h3>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-4" style="text-align:left; display:none;">
                                                    <label style="text-align: left;">ID :</label>
                                                    @Html.TextBox("registradoPor", (string)"", new { @class = "campoNumero", @maxlength = "10", style = "display:none; width:25%", Value = @Session["IdUsua"] })
                                                    @Html.TextBoxFor(model => model.IdUsuario, new { @class = "campoNumero", @maxlength = "100", style = "width:31%", disabled = "disabled" })
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <div>
                                                        <label style="text-align: left; width:20%;">RUC :</label>
                                                    </div>
                                                    <div>
                                                        @Html.TextBox("ruc_OA", (string)"", new { @class = "campoNumero col-xs-12 colsn-6 col-md-6", disabled = true })
                                                        @Html.TextBoxFor(model => model.IdPersona, new { @class = "campoNumero ", @maxlength = "8", style = "width:65%; display:none;", disabled = "disabled" })
                                                        <p id="ArucOA" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo digitos en este campo.</p>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-sm-6 col-md-8" style="text-align:left;">
                                                    <div>
                                                        <label>Raz. Social :</label>
                                                    </div>
                                                    <div>
                                                        @Html.TextBox("razSocial", (string)"", new { @class = "campoTexto  col-xs-12 colsn-6 col-md-12", disabled = "disabled" })
                                                        <p id="ArazSocial" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                    </div>
                                                </div>

                                                <div class="col-xs-12 col-sm-6 col-md-4" style="text-align:left;">
                                                    <div>
                                                        <label>Representante Leg :</label>
                                                    </div>
                                                    <div>
                                                        @Html.TextBox("nombCompleto", (string)"", new { @class = "campoTexto  col-xs-12 colsn-6 col-md-12", disabled = "disabled" })
                                                        <p id="ArazSocial" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <div>
                                                        <label style="text-align: left;">Correo Personal :</label>
                                                    </div>
                                                    <div>
                                                        @Html.TextBox("correoPersonal", (string)"", new { @class = "campoEmail   col-xs-12 colsn-6 col-md-10", disabled = "disabled" })
                                                        <p id="AcorreoPersonal" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                    </div>
                                                </div>
                                            </div>



                                            <div class="row">
                                                <div class="col-xs-12 col-md-11" style="text-align: left; margin-bottom: 1%; border-bottom: 1px solid #ede9e9;">
                                                    <h3>
                                                        <i class="ace-icon fa fa-file"></i>
                                                        Credenciales de usuario.
                                                    </h3>
                                                </div>
                                            </div>


                                            <div class="row" style="margin-bottom:5px;">

                                                <div class="col-xs-12 col-md-4" style="text-align:left;">
                                                    <div>
                                                        <label style="text-align: left;  width:30%;">Usuario :</label>
                                                    </div>
                                                    <div>
                                                        @Html.TextBoxFor(model => model.Usuario, new { @class = "campoTexto ", style = "width:85%;", disabled = true })
                                                        @Html.CheckBox("activarCampoUsuario", new { style = "text-align:left;" })
                                                        <p id="AnombCompleto" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                    </div>
                                                </div>
                                                <div class="col-xs-12 col-md-4" style="text-align:left;">
                                                    <div>
                                                        <label style="text-align: left; width:30%;">Clave : </label>
                                                    </div>
                                                    <div>
                                                        @Html.PasswordFor(model => model.Clave, new { @class = "", style = "width:85%;", disabled = true })
                                                        @Html.CheckBox("mostrarPWD", new { style = "text-align:left;" })
                                                        <p id="AOrdenModulo" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                    </div>
                                                </div>

                                                <div class="col-xs-12 col-md-4" style="text-align:left;">
                                                    <div>
                                                        &nbsp;&nbsp;&nbsp;
                                                    </div>
                                                </div>
                                            </div>
                                    

                                        }
                                        </form>

                                        <div class="modal-footer">
                                            <button id="btnModificUsuarioOA" type="button" class="btn btn-primary" Style="display:none;">Grabar</button>
                                            <button id="btnCerrarUsuarioOA" type="button" class="btn btn-danger" data-dismiss="modal">Cerrar </button>
                                        </div>
                                    </div>







                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () { 
        controles_UsuarioOA(); 
    })
</script>

                       
