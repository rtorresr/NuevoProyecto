@model SEL_Entidades.RRHH_E.Contrato_E
@{
    ViewBag.Title = "contratos";
    Layout = "~/Views/Shared/_LayoutMenuUa.cshtml";
}

<head>
    <title>CONTRATOS</title>
</head>

<div class="main-content">
    <!-- contenedor -->

    <div class="main-content-inner">

        <div class="main-container ace-save-state" id="main-container">

            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
                <!-- Inicio Ruta -->

                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/Modulos/">Modulos</a>
                    </li>
                    <li><a href="/UAdministracion/Index">U.Administración</a></li>
                    <li class="active"> <a href="/UAdministracion/Contratos">Contratos</a></li>
                </ul>
            </div><!-- Fin ruta -->

            <div class="page-content">
                <!-- contenido -->

                <div class="page-header">
                    <!-- Inicio titulo -->
                    <div class="col-md-12">
                        <h1>CONTRATOS  </h1>
                    </div>
                </div>                  <!-- Fin titulo -->
                <!-- inicio pasos-->
                <div class="col-xs-12">
                    <!-- contenido de pasos -->
                    <div id="accordion" style="border:1px solid;">
                        <div class="card">

                            <div class="widget-header card-header" id="headingOne" style="text-align:left;">
                                <h5 class="widget-title" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" style="color:white; text-decoration:none;">
                                        <i class="ace-icon fa fa-file"></i>
                                        Criterios de Búsqueda
                                    </a>
                                </h5>
                                <div class="widget-toolbar" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" data-action="collapse" style="color:#fff;">
                                        <i class="ace-icon fa fa-chevron-down"></i>
                                    </a>
                                </div>
                            </div>


                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body" style="padding-left:12px;padding-right:12px;">
                                    <br />

                                    <div class="row" style="margin-bottom:10px;">

                                        <div class="col-xs-12 col-sm-12 col-md-3" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Nro. Documento :</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("nroDocF", (string)"", new { @class = "soloNumero", style = "width:60%" })
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-sm-12 col-md-3" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Trabajador :</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("trabajador", (string)" ", new { @class = "campoTexto", style = "width:100%" })
                                            </div>

                                        </div>

                                        <div class="col-xs-12 col-sm-12 col-md-3" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Tipo Contrato : </label>
                                            </div>
                                            <div>
                                                <select id="cbxTipoContratoFl" class="custom-select" style="width:65%;"> </select>
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-sm-12 col-md-3" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Nro. Contrato :</label>
                                            </div>
                                            <div>
                                                @Html.TextBox("nroContrato", (string)"", new { @class = "soloNumero", style = "width:65%" })
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row" style="margin-bottom:10px;">

                                        <div class="col-xs-12 col-md-3" style="text-align:left;">
                                            <div class="col-xs-12 col-md-3" style="width: 45%; text-align: left; margin-left:-2%">
                                                <label style="text-align:left;">Fecha de Inicio : </label>
                                            </div>
                                            <div class="col-xs-12 col-md-3 input-group date" id="" style="width:70%; Text-align:left;">
                                                @Html.TextBox("fechaInicio", (string)"", new { @class = "datetimepicker", style = "width:100%" })
                                                <span class="input-group-addon" style="text-align:left;">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>

                                        </div>

                                        <div class="col-xs-12 col-md-3" style="text-align:left;">
                                            <div class="col-xs-12 col-md-3" style="width: 45%; text-align: left; margin-left:-2%">
                                                <label style="text-align:left;">Fecha de Fin : </label>
                                            </div>
                                            <div class="col-xs-12 col-md-3 input-group date" id="" style="width:70%; Text-align:left;">
                                                @Html.TextBox("fechaFin", (string)"", new { @class = "datetimepicker", style = "width:100%" })
                                                <span class="input-group-addon" style="text-align:left;">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>


                                        <div class="col-xs-12 col-md-3" style="text-align:left;">
                                            <div class="col-xs-12 col-md-3" style="width: 45%; text-align: left; margin-left:-2%">
                                                <label style="text-align:left;">Fecha de Cese : </label>
                                            </div>
                                            <div class="col-xs-12 col-md-3 input-group date" id="" style="width:70%; Text-align:left;">
                                                @Html.TextBox("fechaCese", (string)"", new { @class = "datetimepicker", style = "width:100%" })
                                                <span class="input-group-addon" style="text-align:left;">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>


                                        <div class="col-xs-12 col-sm-12 col-md-3" style="text-align:left; margin-bottom: 5px;">

                                        </div>


                                    </div>

                                    <div class="row">
                                        <div class="cbp-mc-column">

                                            <br />


                                        </div>

                                        <div class="cbp-mc-column">
                                            <br />

                                        </div>

                                        <div class="cbp-mc-column">
                                            <br />

                                        </div>

                                        <!-- columna  3 -->

                                        <div class="cbp-mc-column ">
                                            <br>
                                            <button id="btnConsultarContra" class="btn btn-success" style="margin-bottom:25px"><i class="ace-icon fa fa-search"></i>Consultar</button>
                                            <button id="btnLimpiarContra" class="btn btn-success" style="margin-bottom:25px"><i class="ace-icon fa fa-eraser"></i>Limpiar</button>
                                        </div>
                                    </div>


                                </div><!-- fin contenido-->
                            </div>
                        </div>
                    </div>


                    <div class="col-xs-12 col-md-12">

                        <br>
                        <div align="right" class="row">
                            <button id="btn_nuevoCt" type="button" class="btn btn-primary" style="width:100px; margin-right:2%;" data-toggle="modal" data-target="#myModal">
                                <i class="glyphicon glyphicon-plus"></i> Nuevo
                            </button><br />
                        </div>

                        <div id="div-tabla" class="table-responsive margen">

                            <table id="tablaContratos" class="table table-bordered table-hover table-striped" style="width:100%">

                                <thead>
                                    <tr>
                                        <th rowspan="2" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle;">Id</th>
										<th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Nro.</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Nro. DNI</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Trabajador </th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Tipo Contrato</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Nro. Contrato</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Inicio</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Fin</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Monto Establecido</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Cese</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Activo</th>
                                        @*<th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Registrado Por</th>*@
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Registro</th>
                                        @*<th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Modificado Por</th>*@
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha de Modificación</th>
                                        <th colspan="3" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Acción</th>
                                    </tr>

                                    <tr>
                                        @*<th class="text-center" style="background-color:darkseagreen; color:black;">Ver</th>*@
                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Modificar</th>
                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Eliminar</th>
                                    </tr>
                                </thead>

                                <tbody id="tbodyContrato" class="tbodyContrato"></tbody>

                            </table>

                        </div>
                    </div>



                    <div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"  style="overflow-y: auto;" >
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header alert-success alert-dismissible">
                                    <button id="btnClose" type="button" class="close" data-dismiss="modal"></button>
                                    <h4 class="modal-title" id="myModalLabel"> Contrato </h4>
                                </div>
                                <div class="modal-body" id="mdialTamanio" style="max-height:90%">
                                    <form>
                                        @using (Html.BeginForm())
                                        {

                                            <div class="row" style="margin-bottom:5px;">
                                                <div id="idContrato" class="col-xs-12 col-md-6" style="text-align:left; display:none;">
                                                    <label style="text-align:left; width:35%;">ID :</label>
                                                    @Html.TextBoxFor(model => model.IdContrato, new { @class = "campoNumero", @maxlength = "100", style = "width:55%", disabled = true })
                                                </div>
                                                <div id="" class="col-xs-12 col-md-4" style="margin-bottom:5%; display:none;">
                                                    <br />
                                                </div>
                                                <div id="" class="col-xs-12 col-md-4" style="margin-bottom:5%; display:none;">
                                                    <br />
                                                </div>
                                            </div>


                                            <div class="row" style="margin-bottom:5px;">
                                                <div id="idContrato" class="col-xs-12 col-md-6" style="text-align:left; display:none;">
                                                    <label style="text-align:left; width:35%;">ID :</label>
                                                    @Html.TextBoxFor(model => model.IdContrato, new { @class = "campoNumero", @maxlength = "100", style = "width:60%", disabled = true })
                                                </div>

                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left;  width:35%;">Nro Documento :</label>
                                                    @Html.TextBox("NroDocT", (string)"", new { @class = "campoNumero ", @maxlenght = "8", style = "width:40%;" })
                                                    <button id="btnConsTrab" type="button" class="btn btn-success"> Validar </button>
                                                    <p id="ANroDocCT" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo digitos en este campo.</p>
                                                    <p id="ANroDocCT2" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">No se encuentra registrado.</p>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left; width:35%;">Trabajador : </label>
                                                    @Html.HiddenFor(model => model.IdTrabajador, new { @class = "campoNumero", style = "width:55%", disabled = true })
                                                    @Html.TextBoxFor(model => model.nombTrabajador, new { @class = "campoTexto", style = "width:60%", disabled = true })
                                                    <p id="AnombTrabajador" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                </div>

                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left; width:35%;">Tipo Contrato : </label>
                                                    <select id="cbxTipoContratoFr" class="custom-select" style="width:60%;"> </select>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-bottom:5px;">
                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left; width:35%;">Nro. Orden : </label>
                                                    @Html.TextBoxFor(model => model.NroContrato, new { @class = "campoNumero", @maxlenght = "7", style = "width:60%" })
                                                    <p id="ANroContrato" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                </div>

                                                <div class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left; width:35%;">Sueldo Acordado : </label>
                                                    @Html.TextBoxFor(model => model.MontoContrato, new { @class = "campoMilesDeci", style = "width:60%" })
                                                    <p id="ANroContrato" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                                </div>
                                            </div>


                                            <div class="row" style="margin-bottom:5px;">

                                                <div class="col-xs-12 col-md-6 form-inline" style="text-align:left;">
                                                    <label style="text-align:left; width:35%;">Fecha de Inicio : </label>
                                                    <div class="input-group date" style="width:60%; text-align:left;">
                                                        @Html.TextBoxFor(model => model.FechaInicioContrato, new { @class = "datetimepicker", style = "width:100%; text-align:left;" })
                                                        <span class="input-group-addon" style="text-align:left; width:5%;">
                                                            <span class="glyphicon glyphicon-calendar"></span>
                                                        </span>
                                                    </div>
                                                </div>

                                                <div class="form-inline col-xs-12 col-md-6 " style="text-align:left;">
                                                    <label style="text-align:left; width:35%;">Fecha de Termino : </label>
                                                    <div class="input-group date" style="width:60%; text-align:left;">
                                                        @Html.TextBoxFor(model => model.FechaFinContrato, new { @class = "datetimepicker", style = "width:100%; text-align:left;" })
                                                        <span class="input-group-addon" style="text-align:left; width:5%;">
                                                            <span class="glyphicon glyphicon-calendar"></span>
                                                        </span>
                                                    </div>
                                                </div>

                                            </div>


                                            <div class="row" style="margin-bottom:5px;">

                                                <div class="col-xs-12 col-md-6 form-inline" style="text-align:left;">
                                                    <label style="text-align:left; width:35%;">Fecha de Cese : </label>
                                                    <div class="input-group date" style="width:60%; text-align:left;">
                                                        @Html.TextBoxFor(model => model.FechaCese, new { @class = "datetimepicker", style = "width:100%; text-align:left;" })
                                                        <span class="input-group-addon" style="text-align:left; width:5%;">
                                                            <span class="glyphicon glyphicon-calendar"></span>
                                                        </span>
                                                    </div>
                                                </div>

                                                <div id="AActivo" class="col-xs-12 col-md-6" style="text-align:left;">
                                                    <label style="text-align: left; margin-bottom:5%; width:35%;">ACTIVO :</label>
                                                    @Html.TextBox("EActivo", (string)"SI", new { @class = "campoTexto", style = "width:45%", disabled = true, })
                                                </div>

                                                <div id="UActivo" class="col-xs-12 col-md-6" style="text-align:left; display:none;">
                                                    <label style="text-align: left;  width:35%;">ACTIVO </label>
                                                    @Html.TextBoxFor(model => model.Activo, new { @class = "campoTexto", style = "width:45%", disabled = true, })
                                                </div>


                                            </div>

                                            <br />


                                            <div class="row" style="margin-bottom:10px;">
                                                <div class="col-xs-12 col-md-12" hidden="hidden" style="text-align:left; margin-bottom:5%;">
                                                    <label style="text-align: left;">Responsable :</label>
                                                    @Html.TextBoxFor(model => model.IdUsuarioRegistro, new { @class = "campoNumero", style = "width:30%", @Value = Session["IdUsua"] })
                                                </div>

                                                <div class="col-xs-12 col-md-12" hidden="hidden" style="text-align:left; margin-bottom:5%;">
                                                    <label style="text-align: left;">Responsable :</label>
                                                    @Html.TextBoxFor(model => model.IdUsuarioModificacion, new { @class = "campoNumero", style = "width:30%", @Value = Session["IdUsua"] })
                                                </div>
                                            </div>

                                        }
                                    </form>
                                    @*  *@
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" id="btnAgregarContrato">Salvar</button>
                                        <button type="button" class="btn btn-primary" id="btnModificarContrato" style="display:none;">Modificar</button>
                                        <button  type="button" class="btn btn-danger" id="btnCerrarFormulario" data-dismiss="modal">Cerrar </button>
                                    </div>
                                </div>



                            </div>
                        </div>


                    </div>



                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        listarContratos();
        llenarCboxtipoContrato();
        controles_Contrato();
   });
</script>