@model SEL_Entidades.RRHH_E.Area_E

@{
    ViewBag.Title = "area";
    Layout = "~/Views/Shared/_LayoutMenuUA.cshtml";
}
  

<head>
    <title>ÁREA</title>
</head>

<div class="main-content">
    <!-- contenedor -->

    <div class="main-content-inner">

        <div class="main-container ace-save-state" id="main-container">

            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
                <!-- Inicio Ruta -->

                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/Home/Modulos/">Modulos</a>
                    </li>
                    <li><a href="/UAdministracion/Index">U.Administración</a></li>
                    <li class="active"> <a href="/UAdministracion/Area">Área</a></li>
                </ul>
            </div><!-- Fin ruta -->

            <div class="page-content">
                <!-- contenido -->

                <div class="page-header">
                    <!-- Inicio titulo -->
                    <div class="col-md-12">
                        <h1>ÁREA </h1>
                    </div>
                </div>                  <!-- Fin titulo -->
                <!-- inicio pasos-->
                <div class="col-xs-12">
                    <!-- contenido de pasos -->
                    <div id="accordion" style="border:1px solid;">
                        <div class="card">

                            <div class="widget-header card-header" id="headingOne" style="text-align:left;">
                                <h5 class="widget-title" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" style="color:white; text-decoration:none;">
                                        <i class="ace-icon fa fa-file"></i>
                                        Criterios de Búsqueda
                                    </a>
                                </h5>
                                <div class="widget-toolbar" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" data-action="collapse" style="color:#fff;">
                                        <i class="ace-icon fa fa-chevron-down"></i>
                                    </a>
                                </div>
                            </div>


                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body" style="padding-left:12px;padding-right:12px;">
                                    <br />

                                    <div class="row" style="margin-bottom:10px;">
                                        <div class="col-xs-12 col-sm-12 col-md-3" style="text-align: left; margin-bottom: 5px;">
                                            <div>
                                                <label style="text-align:left;">Unidad del Programa :</label>
                                            </div>
                                            <div>
                                                @*<select id="cbxUnidadProg" class="custom-select" style="width:65%;"> </select>*@
                                                <select id="cbxUnidadProgFl" class="custom-select" style="width:65%;"> </select>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="cbp-mc-column">
                                            <br />
                                        </div>

                                        @*<div class="cbp-mc-column">
                                            <br />
                                        </div>

                                        <div class="cbp-mc-column">
                                            <br />
                                        </div>*@

                                        <!-- columna  3 -->

                                        <div class="cbp-mc-column ">
                                            <br>
                                            <button id="btnConsultarArea" class="btn btn-success" style="margin-bottom:25px"><i class="ace-icon fa fa-search"></i>Consultar</button>
                                            <button id="btnLimpiarFiltroArea" class="btn btn-success" style="margin-bottom:25px"><i class="ace-icon fa fa-eraser"></i>Limpiar</button>

                                        </div>
                                    </div>


                                </div><!-- fin contenido-->
                            </div>
                        </div>
                    </div>



                    <div class="col-xs-12 col-md-12">

                        <br>
                        <div align="right" class="row">

                            <button id="btn_nuevo" type="button" class="btn btn-primary" style="width:10%; margin-right:2%;" data-toggle="modal" data-target="#myModal">
                                <i class="glyphicon glyphicon-plus"></i> Nuevo
                            </button><br />
                        </div>

                        <div id="div-tabla" class="table-responsive margen">

                            <table id="tablaArea" class="table table-bordered table-hover table-striped" style="width:100%">

                                <thead>
                                    <tr>
										<th rowspan="2" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle;">Id</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Nro.</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Area</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Siglas</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Unidad</th>
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Activo</th>
                                        @*<th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Registrado Por</th>*@
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Registro</th>
                                        @*<th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Modificado Por</th>*@
                                        <th rowspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Fecha Modificacion</th>
                                        <th colspan="2" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:5%; max-width:5%">Acción</th>
                                    </tr>

                                    <tr>
                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Modificar</th>
                                        <th class="text-center" style="background-color:darkseagreen; color:black; min-width:5%; max-width:5%">Eliminar</th>
                                    </tr>
                                </thead>

                                <tbody id="tbodyArea" class="tbodyArea"></tbody>

                            </table>

                        </div>
                    </div>

                   
                    <div class="modal" id="myModalArea" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"  style="overflow-y: auto;">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header alert-success alert-dismissible">
                                    <button id="btnClose" type="button" class="close" data-dismiss="modal"></button>
                                    <h4 class="modal-title" id="myModalLabel"> Áreas del Programa</h4>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        @using (Html.BeginForm())
                                        {
                                            <div id="idArea" class="form-inline col-xs-12 col-md-12" style="display:none;">
                                                <label style="text-align:left; margin-bottom:5%; width:30%;">ID :</label>
                                                @Html.TextBoxFor(model => model.IdArea, new { @class = "campoNumero", style = "width:60%", disabled = "true" })
                                            </div>

                                            <div class="form-inline col-xs-12 col-md-12">
                                                <label style="text-align:left; margin-bottom:5%; width:30%;">Unidad :</label>
                                                @*<select id="cbxUnidadProg2" class="custom-select" style="width:60%;"> </select>*@
                                                <select id="cbxUnidadProgFr" class="custom-select" style="width:60%;"> </select>
                                            </div>


                                            <div class="form-inline col-xs-12 col-md-12">
                                                <label style="text-align:left; margin-bottom:5%; width:30%;">Area :</label>
                                                @Html.TextBoxFor(model => model.Descripcion, new { @class = "campoTexto", @maxlength = "20", style = "width:60%" })
                                                <p id="ADescripcion" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                            </div>


                                            <div class="form-inline col-xs-12 col-md-12">
                                                <label style="text-align:left; margin-bottom:5%; width:30%;">Siglas :</label>
                                                @Html.TextBoxFor(model => model.Siglas, new { @class = "campoTexto", @maxlength = "8", style = "width:60%" }) 
                                                <p id="ASiglas" class="alerta" style="display:none; font-family:'Gill Sans'; color:darkred">Solo texto en este campo.</p>
                                            </div>


                                            <div id="AActivo" class="form-inline col-xs-12 col-md-12">
                                                <label style="text-align:left; margin-bottom:5%; width:30%;">ACTIVO :</label>
                                                @Html.TextBox("EActivo", (string)"SI", new { @class = "campoTexto", style = "width:60%", disabled = "false", })
                                            </div>

                                                <div id="UActivo" class="form-inline col-xs-12 col-md-12" style="display:none;">
                                                    <label style="text-align:left; margin-bottom:5%;  width:30%;">ACTIVO :</label>
                                                    @Html.TextBoxFor(model => model.Activo, new { @class = "campoTexto", style = "width:60%", disabled = "disabled", })
                                                </div>

                                                <div class="form-inline col-xs-12 col-md-12" hidden="hidden" style="margin-bottom:5%;">
                                                    <label style="text-align:left; width:30%;">Responsable :</label>
                                                    @Html.TextBoxFor(model => model.IdUsuarioRegistro, new {style = "width:30%", Value = Session["IdUsua"] })
                                                </div>

                                                <div class="form-inline col-xs-12 col-md-12" hidden="hidden" style="margin-bottom:5%;">
                                                    <label style="text-align:left; width:30%;">Responsable :</label>
                                                    @Html.TextBoxFor(model => model.IdUsuarioModificacion, new {style = "width:30%", Value = Session["IdUsua"] })
                                                </div>
                                        }
                                    </form>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" id="btnSalvarArea">Salvar</button>
                                    <button type="button" class="btn btn-warning" id="btnModificarArea" style="display:none;">Modificar</button>
                                    <button type="button" class="btn btn-danger"  id="btnCerrarFormulario" data-dismiss="modal">Cerrar </button>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div> 
            </div>

        </div>
    </div> 
</div>

<script type="text/javascript">

    $(document).ready(function () {
          
        llenarCboxUnidPrograma(); 
        listarAreas();
        controles_Area(); 
    });
     
</script>