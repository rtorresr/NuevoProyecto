@{
    ViewBag.Title = "cofinanciamiento";
    Layout = "~/Views/Shared/_LayoutMenuOA.cshtml";
}

<head>
    <title>Estructura de Cofinanciamiento</title>
</head>

<div class="main-content">
    <!-- contenedor -->
    <div class="main-content-inner">
        <div class="main-container ace-save-state" id="main-container">

            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <span>Bienvenido  Sr: @Session["NombreUsua"]   </span>
                <!-- Fin Ruta -->
                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/Opa/"> </a>
                    </li>
                    <li><a href="/Opa/Index">OPA</a></li>
                    <li class="active"> <a href="verPadronSocio">Estructura de Cofinanciamiento</a></li>
                </ul>

            </div><!-- Inicio ruta -->

            <div class="page-content">
                <!-- contenido -->
                <!-- Inicio titulo -->
                @*<div class="page-header"> 
                    <div class="col-md-12">
                        <h1>Estructura de Cofinanciamiento</h1>
                    </div>
                </div>*@       
                <!-- Fin titulo -->
                <!-- inicio pasos-->

                <div class="col-md-12">
                    <!-- contenido de pasos -->

					<div class="row" style="margin-bottom:25px;">
						<br />
						<button class="btn btn-success" id="btnRegistarCofinanciamiento" style="display:none" title="Registrar">
							<i class="ace-icon fa fa-pencil"></i> REGISTRAR
						</button>

						<button class="btn btn-warning" id="btnModificarCofinanciamiento" style="display:none" title="Modificar">
							<i class="ace-icon fa fa-pencil"></i> MODIFICAR
						</button>

						<button class="btn btn-info" id="btnGrabarCofinanciamiento" style="display:none" title="Grabar">
							<i class="ace-icon fa fa-pencil"></i> GRABAR
						</button>

						<button class="btn btn-danger" id="btnCancelarCofinanciamiento" style="display:none" title="Cancelar">
							<i class="ace-icon fa fa-undo"></i> CANCELAR
						</button>
						<button class="btn btn-success" id="btnRegresarCofinanciamiento" style="display:none" title="Regresar">
							<i class="ace-icon fa fa-undo"></i> Regresar
						</button>
					</div>
					 
                    <br />
					<div class="row" style="margin-bottom:20px;">
						<div class="col-xs-12 col-md-12" style="text-align:left;">
							<label style="text-align:left;">Organización : </label>
							@Html.TextBox("rucOA", (string)"", new { style = "width:60%; text-align:left; display:none", disabled = "true", Value = Session["rucOA"] })
							@Html.TextBox("idCultivoCrianza", (string)"", new { style = "width:60%; text-align:left; display:none", disabled = "true" })
							@Html.TextBox("idUsuario", (string)"", new { style = "width:60%; text-align:left; display:none", disabled = "true", Value = Session["IdUsua"] })
							@Html.TextBox("razSocialOA", (string)"", new { style = "width:60%; text-align:left;", disabled = "true" })
						</div>
					</div>
					<br />



                    <!--------- ACORDEON ------------>
                    <div id="accordion" style="border:1px solid;">
                        <div class="card">

                            <div class="card-header widget-header" id="headingOne" style="text-align:left;">
                                <h5 class="widget-title" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" style="color:white; text-decoration:none;">
                                        <i class="ace-icon fa fa-file"></i>
                                        Estructura de cofinanciamiento
                                    </a>
                                </h5>
                                <div class="widget-toolbar" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#" data-action="collapse" style="color:#fff;">
                                        <i class="ace-icon fa fa-chevron-down"></i>
                                    </a>
                                </div>
                            </div>


                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body" style="padding-left: 12px; padding-right: 12px; margin-left: 30%; margin-right: 5%;">
                                    <br />
									 
                                    <div class="row" style="margin-bottom:25px;">
                                        <div class="col-md-8" style="text-align:left;">
                                            <label style="text-align:left;">9.1. Inversión estimada : </label> 
                                            <label style="text-align:left;">S/.</label>
											@Html.TextBox("idCofinanciamiento", (string)"", new { style = "display:none; width:20%", disabled = true })											
                                            @Html.TextBox("inversionTotal", (string)"", new { style = "width:20%", disabled=true }) 
                                        </div>
                                    </div>
                                      
                                    <div class="row" style="margin-bottom:25px;">
                                        <div class="col-md-8" style="text-align:left;">
                                            <label style="text-align:left;">9.2. Aporte Agroideas :  </label> 
                                            <label style="text-align:left;">S/.</label>
                                            @Html.TextBox("aporteAgroideas", (string)"", new{style="width:20%", disabled = true }) 
											&nbsp;&nbsp;&nbsp;&nbsp;
                                            <label style="text-align:left;">porcentaje : </label> 
                                            @Html.TextBox("porcentajeAgroideas", (string)"", new { style = "width:20%", disabled = true }) 
											&nbsp;
                                            <label style="text-align:left;">%.</label>
                                        </div>
                                    </div>

                                    <div class="row" style="margin-bottom:25px;">
                                        <div class="col-md-8" style="text-align:left;">
                                            <label style="text-align:left;">9.3. Aporte Organización : </label> 
                                            <label style="text-align:left;">S/.</label>
                                            @Html.TextBox("aporteOA", (string)"", new { style = "width:20%", disabled=true })
											&nbsp;&nbsp;&nbsp;&nbsp;
                                            <label style="text-align:left;">porcentaje : </label> 
                                            @Html.TextBox("porcentajeOA", (string)"", new { style = "width:20%", disabled = true })
                                            &nbsp;
                                            <label style="text-align:left;">%.</label>
                                        </div>
                                    </div>

                              
									<div class="row" style="margin-bottom:25px;">
										<div class="col-xs-12 col-md-8" style="text-align:left;">
											<label style="text-align:left;">9.4. Procedencia de la contrapartida : </label>
											<br />

											<div class="table-responsive margen">
												<table id="tablaContrapartidaOA" class="table table-bordered table-hover" style="width:95%;">
													<thead>
														<tr>
															<td rowspan="1" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:1%; width:1%; max-width:1%"> Id</td>
															<td rowspan="1" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:1%; width:1%; max-width:1%"> IdCutltivo</td>
															<td rowspan="1" style="display:none; background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:1%; width:1%; max-width:1%"> IdTipoContra</td>
															<td rowspan="1" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:2%; width:2%; max-width:2%"> N°</td>
															<td rowspan="1" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:15%; width:15%; max-width:15%"> Procedencia de la Contrapartida</td>
															<td rowspan="1" style="background-color:darkseagreen; color:black; text-align:center; vertical-align:middle; min-width:2%; width:2%; max-width:2%"> ¿Aplica?</td>
														</tr>
													</thead>
												</table>
											</div>

										</div>
									</div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!--------- FIN ACORDEON ------------>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
	$(document).ready(function () {

		controles_Fmto2CofinanciamientoxAO();

	});
</script>