<div class="main-container ace-save-state" id="main-container">
    <!-- Inicio contenedor-->
    <script type="text/javascript">
        try { ace.settings.loadState('main-container') } catch (e) { }
    </script>


    <!-- Fin Menu -->

    <div class="main-content">
        <!-- contenedor -->

        <div class="main-content-inner">


            <div class="page-content">
                <!-- contenido -->


                <div class="row">
                    <!-- inicio grid-->
                    <div class="col-sm-4 col-xs-6 center" style="margin-bottom:5%; margin-top:2%;">
                        <a id="linkUProm" href="#upModal" data-toggle="modal">
                            <img src="~/Content/img/ico-up.png" width="151" height="153" alt="" /><br /><br />
                            Unidad de Promoción
                        </a>
                        <div id="upModal" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                        <h4 class="modal-title">Líneas de Acción de AGROIDEAS</h4>
                                    </div>
                                    <div class="modal-body"> 
                                        <a href="/UPromocion/Index" disabled:"true">
                                            <img src="~/Content/img/ico-clasico-c.png" width="100" alt="" style="margin-right:10px;" />
                                        </a>
                                        <a href="/UPromocionPrp/Index">
                                            <img src="~/Content/img/ico-reconv-c-v.png" width="100" alt="" style="margin-left:10px;" />
                                        </a>
                                    </div>
                                    <div class="modal-footer">

                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4 col-xs-6  center" style="margin-bottom: 5%; margin-top: 2%;">

                        <a id="linkUNeg" href="/UNegocios/Index">
                            <img src="~/Content/img/ico-un.png" width="151" height="153" alt="" /><br /><br />
                            Unidad de Negocios
                        </a>
                    </div>

                    <div class="col-sm-4 col-xs-6  center" style="margin-bottom: 5%; margin-top: 2%;">

                        <a id="linkUMon" href="/UMonitoreo/Index">
                            <img src="~/Content/img/ico-um.png" width="151" height="153" alt="" /><br /><br />
                            Unidad de Monitoreo
                        </a>
                    </div>

                </div>
                <div class="row">

                    <div class="col-sm-4 col-xs-6 center" style="margin-bottom:5%;">
                        <a id="linkUPSE" href="#">
                            <img src="~/Content/img/ico-upse.png" width="151" height="153" alt="" /><br /><br />
                            Unidad de Planificación, Seguimiento y Evaluación
                        </a>
                    </div>


                    <div class="col-sm-4 col-xs-6  center" style="margin-bottom:5%;">
                        <a id="linkUAdmin" href="/UAdministracion/Index">
                            <img src="~/Content/img/ico-ua.png" width="151" height="153" alt="" /><br /><br />
                            Unidad de Administración
                        </a>
                    </div>


                    <div class="col-sm-4 col-xs-6  center" style="margin-bottom:5%;">
                        <a id="linkULeg" href="#" data-toggle="modal">
                            <img src="~/Content/img/ico-legal.png" width="151" height="153" alt="" /><br /><br />
                            Asesoría Legal
                        </a>

                    </div>

                </div>

                <div class="row">

                    <div class="col-sm-4 col-xs-6 center">
                        <a id="linkUJefP" href="#">
                            <img src="~/Content/img/ico-jp.png" width="151" height="153" alt="" /><br /><br />
                            Jefatura del Programa
                        </a>
                    </div>

                    <div class="col-sm-4 col-xs-6  center">
                        <a id="linkUASist" href="/UASistemas/index">
                            <img src="~/Content/img/ico-adm.png" width="151" height="153" alt="" /><br /><br />
                            Administración del Sistema
                        </a>
                    </div>


                    <div class="col-sm-4 col-xs-6  center">
                        <a id="linkOA" href="/OA/Index">
                            <img src="~/Content/img/ico-OA.png" width="151" height="153" alt="" /><br /><br />
                            Organización Agricola
                        </a>
                    </div>

                </div>
                <!-- fin grid -->
                <!--INGRESAR PRE INFORMACION-->
                <div id="modalCambiarContraseña" class="modal fade" role="dialog" data-backdrop="false" style="background-color:rgba(0,0,0,0.5);">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                <h4 class="modal-title"> Cambiar Contraseña de Usuario </h4>
                            </div>

                            <div id="form_Registro" class="modal-body">
                                <div class="row" style="text-align:left">
                                    <div class="col-xs-12 col-md-2" style="text-align:left">
                                        <div>
                                            &nbsp;
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-8" style="text-align:left">
                                        <div>
                                            <label>Contraseña Actual</label>
                                        </div>
                                        <div class="inline-block">
                                            @Html.Password("pwdActual", (string)"", new { style = "width:70%" })
                                            @Html.CheckBox("chkMostrarPA")
                                            <label> mostrar.</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-2" style="text-align:left">
                                        <div>
                                            &nbsp;
                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="text-align:left">
                                    <div class="col-xs-12 col-md-2" style="text-align:left">
                                        <div>
                                            &nbsp;
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-8" style="text-align:left">
                                        <div>
                                            <label>Nueva Contraseña</label>
                                        </div>
                                        <div class="inline-block">
                                            @Html.TextBox("usuario", (string)"", new { style = "display:none", Value = @Session["Usuario"] })
                                            @Html.TextBox("idUsuar", (string)"", new { style = "display:none", Value = @Session["IdUsua"] })
                                            @Html.Password("pwdNueva", (string)"", new { style = "width:70%" })
                                            @Html.CheckBox("chkMostrarPN")
                                            <label> mostrar.</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-2" style="text-align:left">
                                        <div>
                                            &nbsp;
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="text-align:left;">
                                    <div class="col-xs-12 col-md-2" style="text-align:left">
                                        <div>
                                            &nbsp;
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-8" style="text-align:left">
                                        <div>
                                            <label>Confirmar Contraseña</label>
                                        </div>
                                        <div class="inline-block">
                                            @Html.Password("pwdNuevaConf", (string)"", new { style = "width:70%" })
                                            @Html.CheckBox("chkMostrarNP")
                                            <label> mostrar.</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-2" style="text-align:left">
                                        <div>
                                            &nbsp;
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="btnSalvarCambiosPWD">Grabar</button>
                                <button type="button" class="btn btn-danger" id="btnCerrarCambioPWD" data-dismiss="modal">Cerrar </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>





        </div><!-- contenido -->
    </div>



</div><!-- fin contenedor -->

<div class="footer" style="margin-top:0px !important;">
    <div class="footer-inner">
        <div class="footer-content">
            <span class="bigger-120">
                <span class="green bolder">AGROIDEAS</span>
                2018
            </span>

        </div>
    </div>
</div>

